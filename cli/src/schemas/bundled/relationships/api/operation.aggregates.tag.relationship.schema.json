  "title": "Operation Aggregates Tag",
  "description": "Defines relationship: api.operation aggregates api.tag",
  "allOf": [
    {
      "$ref": "../../base/spec-node-relationship.schema.json"
    }
  ],
  "properties": {
    "id": {
      "const": "api.aggregates.api"
    },
    "source_spec_node_id": {
      "const": "api.operation"
    },
    "source_layer": {
      "const": "api"
    },
    "destination_spec_node_id": {
      "const": "api.tag"
    },
    "destination_layer": {
      "const": "api"
    },
    "predicate": {
      "const": "aggregates"
    },
    "cardinality": {
      "const": "many-to-many"
    },
    "strength": {
      "const": "medium"
    }
  }
}
