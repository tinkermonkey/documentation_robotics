{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FlowStep",
  "description": "One step in a navigation flow",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.flowstep"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "flowstep"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "sequence": {
          "type": "integer"
        },
        "route": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "waitBehavior": {
          "type": "string",
          "enum": ["blocking", "non-blocking", "timeout", "async"],
          "description": "Execution model governing how the flow waits for this step to complete before advancing."
        }
      },
      "required": ["sequence", "route"],
      "additionalProperties": false
    }
  }
}
