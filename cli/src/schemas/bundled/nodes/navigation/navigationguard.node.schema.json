{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NavigationGuard",
  "description": "Guard condition for route access",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.navigationguard"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "navigationguard"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "order": {
          "type": "integer"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["type", "order"],
      "additionalProperties": false
    }
  }
}
