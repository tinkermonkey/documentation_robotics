{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Driver",
  "description": "External or internal condition that motivates an organization to change its goals, strategy, or architecture.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.driver"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "driver"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "market",
            "regulatory",
            "operational",
            "strategic",
            "competitive",
            "technological"
          ],
          "description": "Category of the motivating condition or force"
        }
      },
      "required": ["category"],
      "additionalProperties": false
    }
  }
}
