{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "x-ui",
  "description": "UI rendering hints",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-model.x-ui"
    },
    "layer_id": {
      "const": "data-model"
    },
    "type": {
      "const": "x-ui"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "component": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "placeholder": {
          "type": "string"
        },
        "helpText": {
          "type": "string"
        },
        "order": {
          "type": "integer"
        },
        "readOnly": {
          "type": "boolean"
        },
        "hidden": {
          "type": "boolean"
        },
        "group": {
          "type": "string"
        }
      },
      "required": [
        "component",
        "label",
        "placeholder",
        "helpText",
        "order",
        "readOnly",
        "hidden",
        "group"
      ],
      "additionalProperties": false
    }
  }
}
