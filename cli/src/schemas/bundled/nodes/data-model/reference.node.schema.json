{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/data-model/reference.node.schema.json",
  "title": "Reference",
  "description": "Reference to another schema",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-model.reference"
    },
    "layer_id": {
      "const": "data-model"
    },
    "type": {
      "const": "reference"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "on_delete": {
          "type": "string",
          "enum": [
            "CASCADE",
            "SET NULL",
            "SET DEFAULT",
            "RESTRICT",
            "NO ACTION"
          ],
          "description": "ReferentialAction classification"
        }
      },
      "additionalProperties": false
    }
  }
}
