{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ApplicationInteraction",
  "description": "Unit of collective application behavior",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "application.applicationinteraction"
    },
    "layer_id": {
      "const": "application"
    },
    "type": {
      "const": "applicationinteraction"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "pattern": {
          "type": "string"
        }
      },
      "required": [
        "pattern"
      ],
      "additionalProperties": false
    }
  }
}
