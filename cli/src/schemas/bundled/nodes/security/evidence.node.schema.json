{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence",
  "description": "Evidence required for accountability",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.evidence"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "evidence"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["log", "signature", "timestamp", "hash", "certificate", "audit-trail"],
          "description": "Category of evidence artifact, per NIST AU-10 (Non-repudiation)."
        },
        "strength": {
          "type": "string",
          "enum": ["strong", "moderate", "weak", "cryptographic"],
          "description": "Assurance strength of the evidence, per NIST SP 800-63-3 assurance levels."
        },
        "source": {
          "type": "string"
        }
      },
      "required": ["type", "source"],
      "additionalProperties": false
    }
  }
}
