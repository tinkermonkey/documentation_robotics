{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/evidence.node.schema.json",
  "title": "Evidence",
  "description": "Evidence required for accountability",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.evidence"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "evidence"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "strength": {
          "type": "string"
        },
        "source": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "source"
      ],
      "additionalProperties": false
    }
  }
}
