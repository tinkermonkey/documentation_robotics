{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PasswordPolicy",
  "description": "Password requirements",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.passwordpolicy"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "passwordpolicy"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "minLength": {
          "type": "integer"
        },
        "maxLength": {
          "type": "integer"
        },
        "requireUppercase": {
          "type": "boolean"
        },
        "requireLowercase": {
          "type": "boolean"
        },
        "requireNumbers": {
          "type": "boolean"
        },
        "requireSpecialChars": {
          "type": "boolean"
        },
        "preventReuse": {
          "type": "integer"
        },
        "expiryDays": {
          "type": "integer"
        },
        "lockoutAttempts": {
          "type": "integer"
        },
        "lockoutDuration": {
          "type": "integer"
        }
      },
      "required": ["expiryDays"],
      "additionalProperties": false
    }
  }
}
