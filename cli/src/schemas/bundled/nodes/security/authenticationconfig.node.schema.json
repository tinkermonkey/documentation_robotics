{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AuthenticationConfig",
  "description": "Specifies how principals are verified before accessing protected resources, including the identity provider, multi-factor requirements, session lifetime, and credential policy references. Scoped per application or service. Maps to NIST SP 800-53 IA-2, IA-5, and IA-11.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.authenticationconfig"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "authenticationconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "provider": {
          "type": "string",
          "enum": ["oauth2", "saml", "ldap", "openid-connect", "local", "fido2"],
          "description": "Authentication protocol or provider type."
        },
        "verificationLevel": {
          "type": "string",
          "enum": ["ial1", "ial2", "ial3"],
          "description": "Identity Assurance Level, per NIST SP 800-63A: IAL1 (self-asserted), IAL2 (remote identity proofing), IAL3 (in-person proofing)."
        },
        "sessionTimeout": {
          "type": "integer"
        },
        "mfaRequired": {
          "type": "boolean"
        },
        "passwordPolicy": {
          "type": "string"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["provider", "sessionTimeout"],
      "additionalProperties": false
    }
  }
}
