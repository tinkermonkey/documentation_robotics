{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Classification",
  "description": "A single classification level defining data sensitivity and protection requirements",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.classification"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "classification"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["public", "internal", "confidential", "restricted", "top-secret"],
          "description": "Data sensitivity tier, aligned with NIST FIPS 199 security categorization levels."
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["level", "label"],
      "additionalProperties": false
    }
  }
}
