{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Permission",
  "description": "Permission definition",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.permission"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "permission"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "description": {
          "type": "string"
        },
        "scope": {
          "type": "string",
          "enum": ["read-only", "write", "admin", "delegated", "conditional"],
          "description": "Breadth of access granted by this permission, from narrow read-only to full administrative control."
        },
        "resource": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "enum": ["create", "read", "update", "delete", "execute", "list"],
          "description": "CRUD-plus operation type this permission governs, per NIST SP 800-53 AC-3 Access Enforcement."
        }
      },
      "required": ["scope", "resource", "action"],
      "additionalProperties": false
    }
  }
}
