{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Condition",
  "description": "A logical expression or predicate that determines when a SecurityPolicy rule applies. Supports attribute-based access control by evaluating context such as time, location, user attributes, or resource state.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.condition"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "condition"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "expression": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "operator": {
          "type": "string",
          "enum": ["eq", "neq", "gt", "lt", "in", "contains", "matches"],
          "description": "Comparison operator for the condition expression, aligned with XACML MatchType values."
        },
        "evaluationType": {
          "type": "string",
          "enum": ["static", "dynamic", "runtime", "compile-time"],
          "description": "When the condition is evaluated: at build time, at policy load, or at runtime during access enforcement."
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["expression"],
      "additionalProperties": false
    }
  }
}
