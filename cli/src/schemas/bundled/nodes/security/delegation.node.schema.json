{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Delegation",
  "description": "Explicit delegation of permissions or goals",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.delegation"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "delegation"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "delegator": {
          "type": "string"
        },
        "delegatee": {
          "type": "string"
        },
        "delegationType": {
          "type": "string",
          "enum": ["full", "partial", "temporary", "conditional", "revocable"],
          "description": "Scope and constraints of the delegation grant, per OAuth 2.0 token delegation and NIST SP 800-162 attribute delegation models."
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["delegator", "delegatee", "delegationType"],
      "additionalProperties": false
    }
  }
}
