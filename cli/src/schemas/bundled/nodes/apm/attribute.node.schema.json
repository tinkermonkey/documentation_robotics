{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Attribute",
  "description": "Key-value pair metadata",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.attribute"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "attribute"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": ["key", "value"],
      "additionalProperties": false
    }
  }
}
