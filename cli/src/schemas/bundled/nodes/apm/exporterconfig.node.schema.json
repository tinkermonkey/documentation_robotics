{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExporterConfig",
  "description": "Configuration for telemetry data export destinations, specifying protocol (OTLP, Jaeger, Prometheus), endpoints, authentication, batching, and retry policies. Controls where observability data is sent.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.exporterconfig"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "exporterconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "endpoint": {
          "type": "string"
        },
        "protocol": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "endpoint"
      ],
      "additionalProperties": false
    }
  }
}
