{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExporterConfig",
  "description": "Configuration for telemetry data export destinations, specifying protocol (OTLP, Jaeger, Prometheus), endpoints, authentication, batching, and retry policies. Controls where observability data is sent.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.exporterconfig"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "exporterconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["otlp", "jaeger", "zipkin", "prometheus", "stdout", "logging"],
          "description": "The type of exporter"
        },
        "enabled": {
          "type": "boolean"
        },
        "endpoint": {
          "type": "string"
        },
        "protocol": {
          "type": "string"
        },
        "authType": {
          "type": "string",
          "enum": ["none", "api_key", "bearer", "tls_client_cert", "basic"],
          "description": "Authentication method used for the export destination"
        },
        "compression": {
          "type": "string",
          "enum": ["none", "gzip"],
          "description": "Compression algorithm for OTLP export payloads. Applies to OTLP exporters only."
        }
      },
      "required": ["type", "endpoint"],
      "additionalProperties": false
    }
  }
}
