{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resource",
  "description": "Immutable representation of entity producing telemetry",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.resource"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "resource"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "schemaUrl": {
          "type": "string"
        },
        "droppedAttributesCount": {
          "type": "string"
        },
        "serviceName": {
          "type": "string",
          "description": "OTel Resource semantic convention: logical name of the service (service.name)"
        },
        "serviceVersion": {
          "type": "string",
          "description": "OTel Resource semantic convention: version of the service (service.version)"
        },
        "deploymentEnvironment": {
          "type": "string",
          "description": "OTel Resource semantic convention: deployment environment (deployment.environment)"
        },
        "attributes": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["droppedAttributesCount"],
      "additionalProperties": false
    }
  }
}
