{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MetricInstrument",
  "description": "Defines a specific metric measurement instrument (Counter, Gauge, Histogram, etc.) with its name, unit, description, and attributes. The fundamental unit of metric collection.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.metricinstrument"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "metricinstrument"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "unit": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "source": {
          "type": "object",
          "description": "Source code reference for code-defined metrics"
        }
      },
      "required": [
        "type",
        "unit"
      ],
      "additionalProperties": false
    }
  }
}
