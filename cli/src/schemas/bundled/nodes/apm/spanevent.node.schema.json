{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpanEvent",
  "description": "Timestamped annotation within a span's lifetime, used to record significant moments such as exceptions (OTel semantic convention: name='exception' with exception.type, exception.message, and exception.stacktrace attributes) or state transitions.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.spanevent"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "spanevent"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "timeUnixNano": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "droppedAttributesCount": {
          "type": "string"
        },
        "attributes": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["timeUnixNano", "droppedAttributesCount"],
      "additionalProperties": false
    }
  }
}
