{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LogConfiguration",
  "description": "Logging configuration",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.logconfiguration"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "logconfiguration"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "serviceName": {
          "type": "string"
        },
        "logLevel": {
          "type": "string"
        }
      },
      "required": [
        "serviceName",
        "logLevel"
      ],
      "additionalProperties": false
    }
  }
}
