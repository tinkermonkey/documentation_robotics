{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DataConfig",
  "description": "Configuration for data binding and state management within UI components, defining data sources, transformation pipelines, and update triggers. Manages component data flow.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.dataconfig"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "dataconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      },
      "required": [
        "source",
        "target"
      ],
      "additionalProperties": false
    }
  }
}
