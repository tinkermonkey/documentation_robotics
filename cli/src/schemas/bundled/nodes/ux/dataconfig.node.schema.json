{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DataConfig",
  "description": "Configuration for data binding and state management within UI components, defining data sources, transformation pipelines, and update triggers. Manages component data flow.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.dataconfig"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "dataconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "source": {
          "type": "string",
          "enum": ["api", "state", "local-storage", "mock", "static"],
          "description": "Data origin for this binding configuration."
        },
        "target": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "cacheStrategy": {
          "type": "string",
          "enum": ["cache-first", "network-first", "stale-while-revalidate", "no-cache"],
          "description": "Client-side data freshness policy governing how fetched data is cached and revalidated."
        }
      },
      "required": ["source", "target"],
      "additionalProperties": false
    }
  }
}
