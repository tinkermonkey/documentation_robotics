{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LibraryComponent",
  "description": "Reusable UI component definition that can be instantiated in multiple UXSpecs",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.librarycomponent"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "librarycomponent"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "form",
            "table",
            "chart",
            "navigation",
            "feedback",
            "layout",
            "input",
            "display"
          ],
          "description": "UI component category used for library organization and component lookup."
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "description": "Fine-grained categorization within the component type (e.g., 'data-grid', 'inline-form', 'bar-chart') for library browsing and search."
        },
        "source": {
          "type": "object",
          "description": "Distribution source for this component (npm package, git repository, or internal registry).",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["npm", "git", "internal-registry"],
              "description": "Distribution mechanism."
            },
            "identifier": {
              "type": "string",
              "description": "Package name, git URL, or registry path (e.g., '@org/ui-components', 'https://github.com/org/ui')."
            }
          },
          "additionalProperties": false
        },
        "props": {
          "type": "array",
          "description": "Schema of properties accepted by this component. Each entry defines an accepted prop with its name, type, and whether it is required.",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "description": "Prop identifier." },
              "type": {
                "type": "string",
                "enum": ["string", "number", "boolean", "object", "array"],
                "description": "Data type of the prop value."
              },
              "required": {
                "type": "boolean",
                "description": "Whether this prop must be provided by consumers."
              },
              "default": {
                "type": "string",
                "description": "Default value as string; coerced to declared type at runtime."
              }
            },
            "required": ["name", "type"],
            "additionalProperties": false
          }
        },
        "slots": {
          "type": "array",
          "description": "Named content slots this component exposes for composition, analogous to HTML slot elements in Web Components.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Slot identifier referenced by ComponentReference.slot."
              },
              "description": {
                "type": "string",
                "description": "What content is expected in this slot."
              }
            },
            "required": ["name"],
            "additionalProperties": false
          }
        },
        "events": {
          "type": "array",
          "description": "Custom events emitted by this component that consumers can listen to.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Event name (e.g., 'row-selected', 'form-submitted')."
              },
              "description": {
                "type": "string",
                "description": "When this event fires and what payload it carries."
              }
            },
            "required": ["name"],
            "additionalProperties": false
          }
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
