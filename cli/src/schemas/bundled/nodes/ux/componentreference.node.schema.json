{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ComponentReference",
  "description": "A reference to another UI component that can be embedded or composed within a parent component. Enables component reuse and modular UI architecture.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.componentreference"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "componentreference"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "ref": {
          "type": "string"
        },
        "variant": {
          "type": "string"
        },
        "slot": {
          "type": "string"
        }
      },
      "required": [
        "ref"
      ],
      "additionalProperties": false
    }
  }
}
