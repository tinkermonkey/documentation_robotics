{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SystemSoftware",
  "description": "Software that provides platform for applications",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.systemsoftware"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "systemsoftware"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "softwareType": {
          "type": "string",
          "enum": [
            "operating-system",
            "container-runtime",
            "middleware",
            "dbms",
            "message-broker",
            "cache"
          ],
          "description": "Platform software category, per ArchiMate 3.2 SystemSoftware element."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["softwareType"],
      "additionalProperties": false
    }
  }
}
