{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Node",
  "description": "A computational or physical resource that hosts, manipulates, or interacts with other computational or physical resources, such as a server cluster, virtual machine host, or container runtime.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.node"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "node"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "nodeType": {
          "type": "string",
          "enum": [
            "physical-server",
            "virtual-machine",
            "container",
            "kubernetes-cluster",
            "bare-metal"
          ],
          "description": "Computational resource category of the node, per ArchiMate 3.2 Node element."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["nodeType"],
      "additionalProperties": false
    }
  }
}
