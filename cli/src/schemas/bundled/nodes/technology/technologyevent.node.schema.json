{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TechnologyEvent",
  "description": "Technology state change",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.technologyevent"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "technologyevent"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "eventType": {
          "type": "string",
          "enum": ["failure", "alert", "scheduled", "threshold-breach", "deployment"],
          "description": "Technology state change category, per ArchiMate 3.2 Technology Event element; aligned with OpenTelemetry event semantics."
        }
      },
      "required": ["eventType"],
      "additionalProperties": false
    }
  }
}
