{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BusinessEvent",
  "description": "A behavior element that represents an organizational state change, such as a customer order placed or a contract signed, that can trigger or result from a BusinessProcess or BusinessFunction.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "business.businessevent"
    },
    "layer_id": {
      "const": "business"
    },
    "type": {
      "const": "businessevent"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["internal", "external", "message", "timer"],
          "description": "Classification of the business event trigger"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
