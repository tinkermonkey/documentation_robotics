{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Representation",
  "description": "A passive structure element representing the perceptible form in which a BusinessObject is manifested (e.g., a printed report, a digital document, or an on-screen form). Multiple representations can carry the same BusinessObject.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "business.representation"
    },
    "layer_id": {
      "const": "business"
    },
    "type": {
      "const": "representation"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "format": {
          "type": "string",
          "enum": ["pdf", "html", "xml", "json", "plain-text", "binary"],
          "description": "The media format of this representation"
        }
      },
      "required": ["format"],
      "additionalProperties": false
    }
  }
}
