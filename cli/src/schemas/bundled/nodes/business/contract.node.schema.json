{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Contract",
  "description": "Formal specification of agreement",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "business.contract"
    },
    "layer_id": {
      "const": "business"
    },
    "type": {
      "const": "contract"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "additionalProperties": false
    }
  }
}
