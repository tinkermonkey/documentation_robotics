{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CoverageSummary",
  "description": "Aggregated coverage status across all targets and requirements within a test coverage model, suitable for test summary reporting.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.coveragesummary"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "coveragesummary"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "modelRef": {
          "type": "string",
          "description": "ID of the testing.testcoveragemodel this summary aggregates"
        },
        "generatedAt": {
          "type": "string"
        },
        "totalTargets": {
          "type": "integer"
        },
        "totalRequirements": {
          "type": "integer"
        },
        "totalSketches": {
          "type": "integer"
        },
        "targetSummaries": {
          "type": "array",
          "description": "Contains relationship"
        },
        "gaps": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["totalTargets", "totalRequirements", "totalSketches"],
      "additionalProperties": false
    }
  }
}
