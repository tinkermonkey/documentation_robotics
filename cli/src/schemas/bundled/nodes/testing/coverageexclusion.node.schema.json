{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CoverageExclusion",
  "description": "Explicit exclusion from coverage with justification",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.coverageexclusion"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "coverageexclusion"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        },
        "riskAccepted": {
          "type": "boolean"
        },
        "approvedBy": {
          "type": "string"
        },
        "affectedTargetRef": {
          "type": "string",
          "description": "ID of the testing.testcoveragetarget or testing.coveragerequirement being excluded from coverage"
        },
        "dateApproved": {
          "type": "string",
          "format": "date",
          "description": "ISO date when the exclusion was formally approved, supporting audit trail requirements"
        }
      },
      "required": ["reason", "riskAccepted", "approvedBy"],
      "additionalProperties": false
    }
  }
}
