{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RequestBody",
  "description": "Request payload for an operation",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.requestbody"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "requestbody"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}
