{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Encoding",
  "description": "Specifies serialization details for multipart request body properties, including content-type, headers, and encoding style. Handles complex content negotiation.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.encoding"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "encoding"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "propertyName": {
          "type": "string"
        },
        "contentType": {
          "type": "string"
        },
        "style": {
          "type": "string"
        },
        "explode": {
          "type": "boolean"
        },
        "allowReserved": {
          "type": "boolean"
        }
      },
      "required": [
        "propertyName",
        "contentType",
        "style"
      ],
      "additionalProperties": false
    }
  }
}
