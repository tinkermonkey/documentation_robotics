          "description": "Contains relationship"
        },
        "delete": {
          "type": "array",
          "description": "Contains relationship"
        },
        "options": {
          "type": "array",
          "description": "Contains relationship"
        },
        "head": {
          "type": "array",
          "description": "Contains relationship"
        },
        "patch": {
          "type": "array",
          "description": "Contains relationship"
        },
        "trace": {
          "type": "array",
