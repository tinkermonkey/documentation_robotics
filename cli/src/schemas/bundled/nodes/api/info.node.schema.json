{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Info",
  "description": "Metadata about the API",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.info"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "info"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "termsOfService": {
          "type": "string"
        },
        "contact": {
          "type": "string"
        },
        "license": {
          "type": "string"
        }
      },
      "required": ["title", "version", "termsOfService"],
      "additionalProperties": false
    }
  }
}
