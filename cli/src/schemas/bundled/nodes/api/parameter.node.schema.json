{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Parameter",
  "description": "Parameter for an operation",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.parameter"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "parameter"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "in": {
          "type": "string",
          "enum": ["query", "header", "path", "cookie"],
          "description": "Location of the parameter (path parameters are always required)"
        },
        "description": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "deprecated": {
          "type": "boolean"
        },
        "allowEmptyValue": {
          "type": "boolean"
        },
        "style": {
          "type": "string",
          "enum": [
            "matrix",
            "label",
            "form",
            "simple",
            "spaceDelimited",
            "pipeDelimited",
            "deepObject"
          ],
          "description": "Serialization style for the parameter value"
        },
        "schema": {
          "type": "object",
          "description": "The schema defining the type and constraints for the parameter value"
        }
      },
      "required": ["name", "in"],
      "additionalProperties": false
    }
  }
}
