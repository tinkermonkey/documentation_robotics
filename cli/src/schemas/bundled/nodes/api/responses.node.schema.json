{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Responses",
  "description": "Possible responses from an operation",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.responses"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "responses"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
