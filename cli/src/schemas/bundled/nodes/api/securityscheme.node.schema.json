{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecurityScheme",
  "description": "Defines an authentication/authorization mechanism for the API. Supports four scheme types: apiKey (name+in required), http (scheme required), oauth2 (flows required), and openIdConnect (openIdConnectUrl required). Only 'type' is universally required.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.securityscheme"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "securityscheme"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "type": {
          "type": "string",
          "enum": ["apiKey", "http", "oauth2", "openIdConnect"],
          "description": "Type of security scheme"
        },
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "in": {
          "type": "string"
        },
        "scheme": {
          "type": "string"
        },
        "bearerFormat": {
          "type": "string"
        },
        "flows": {
          "type": "array",
          "description": "Contains relationship â€” OAuth Flows configuration, required when type is oauth2"
        },
        "openIdConnectUrl": {
          "type": "string",
          "description": "OpenID Connect discovery URL, required when type is openIdConnect"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
