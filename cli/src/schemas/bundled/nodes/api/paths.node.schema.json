{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Paths",
  "description": "A map of URL path patterns to PathItem objects defining the API surface. Path keys use OpenAPI path templating (e.g., /users/{id}).",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.paths"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "paths"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
