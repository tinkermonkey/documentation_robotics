{
  "name": "@documentation-robotics/cli",
  "version": "0.1.0",
  "description": "CLI for Documentation Robotics",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "dr": "dist/cli.js"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node esbuild.config.js && npm run copy-schemas",
    "build:debug": "tsc && DR_TELEMETRY=true node esbuild.config.js && npm run copy-schemas",
    "copy-schemas": "cp -r src/schemas dist/",
    "dev": "node dist/cli.js",
    "lint": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "test": "bun test tests/**/*.test.ts",
    "test:unit": "bun test tests/unit/**/*.test.ts",
    "test:integration": "bun test tests/integration/*.test.ts",
    "test:validators": "bun test tests/unit/validators/**/*.test.ts",
    "test:compatibility": "bun test tests/compatibility",
    "test:all": "bun test tests/**/*.test.ts",
    "test:coverage": "bun test --coverage tests/**/*.test.ts",
    "test:coverage:html": "bun test --coverage --coverage-reporter=html tests/**/*.test.ts",
    "test:coverage:ci": "bun test --coverage --coverage-reporter=lcov tests/**/*.test.ts && node scripts/validate-coverage-threshold.js"
  },
  "keywords": [
    "architecture",
    "documentation",
    "modeling",
    "federated"
  ],
  "author": "Documentation Robotics Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinkermonkey/documentation_robotics.git",
    "directory": "cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@clack/prompts": "^0.8.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.0",
    "ansis": "^3.0.0",
    "commander": "^12.0.0",
    "graphology": "^0.25.4",
    "graphology-traversal": "^0.3.1",
    "hono": "^4.11.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.57.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.57.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.0",
    "@opentelemetry/sdk-logs": "^0.57.0",
    "@opentelemetry/sdk-node": "^0.57.0",
    "@opentelemetry/sdk-trace-base": "^1.30.0",
    "@types/bun": "^1.3.5",
    "bun": "^1.3.5",
    "bun-types": "^1.3.5",
    "diff": "^8.0.2",
    "esbuild": "^0.24.2",
    "glob": "^11.1.0",
    "typescript": "^5.3.0"
  }
}
