{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/06-api-layer.json",
  "title": "API Layer Schema",
  "description": "OpenAPI 3.0 specification with custom extensions for federated architecture integration",
  "type": "object",
  "required": ["openapi", "info", "paths"],
  "properties": {
    "openapi": {
      "type": "string",
      "pattern": "^3\\.0\\.\\d+$",
      "description": "OpenAPI specification version"
    },
    "info": {
      "$ref": "#/definitions/Info"
    },
    "servers": {
      "type": "array",
      "items": { "$ref": "#/definitions/Server" }
    },
    "paths": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/PathItem"
      }
    },
    "components": {
      "$ref": "#/definitions/Components"
    },
    "security": {
      "type": "array",
      "items": { "type": "object" }
    },
    "tags": {
      "type": "array",
      "items": { "$ref": "#/definitions/Tag" }
    },
    "externalDocs": {
      "$ref": "#/definitions/ExternalDocumentation"
    },
    "x-archimate-ref": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to ApplicationService element"
    },
    "x-service-tier": {
      "type": "string",
      "enum": ["api-gateway", "service", "backend"]
    }
  },
  "definitions": {
    "Info": {
      "type": "object",
      "required": ["title", "version"],
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "termsOfService": {
          "type": "string",
          "format": "uri"
        },
        "contact": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "url": { "type": "string", "format": "uri" }
          }
        },
        "license": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "url": { "type": "string", "format": "uri" }
          }
        }
      }
    },
    "Server": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "description": {
          "type": "string"
        },
        "variables": {
          "type": "object"
        }
      }
    },
    "PathItem": {
      "type": "object",
      "properties": {
        "summary": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "get": { "$ref": "#/definitions/Operation" },
        "put": { "$ref": "#/definitions/Operation" },
        "post": { "$ref": "#/definitions/Operation" },
        "delete": { "$ref": "#/definitions/Operation" },
        "patch": { "$ref": "#/definitions/Operation" },
        "parameters": {
          "type": "array"
        }
      }
    },
    "Operation": {
      "type": "object",
      "required": ["operationId", "responses"],
      "properties": {
        "operationId": {
          "type": "string",
          "description": "Unique operation identifier"
        },
        "summary": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "deprecated": {
          "type": "boolean",
          "default": false
        },
        "parameters": {
          "type": "array"
        },
        "requestBody": {
          "type": "object"
        },
        "responses": {
          "type": "object"
        },
        "security": {
          "type": "array"
        },
        "x-archimate-ref": {
          "type": "string",
          "format": "uuid"
        },
        "x-rate-limit": {
          "type": "string"
        },
        "x-apm-trace": {
          "type": "boolean",
          "default": true
        },
        "x-cache-ttl": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "Components": {
      "type": "object",
      "properties": {
        "schemas": {
          "type": "object"
        },
        "responses": {
          "type": "object"
        },
        "parameters": {
          "type": "object"
        },
        "examples": {
          "type": "object"
        },
        "requestBodies": {
          "type": "object"
        },
        "headers": {
          "type": "object"
        },
        "securitySchemes": {
          "type": "object"
        },
        "links": {
          "type": "object"
        },
        "callbacks": {
          "type": "object"
        }
      }
    },
    "Tag": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "externalDocs": {
          "$ref": "#/definitions/ExternalDocumentation"
        }
      }
    },
    "ExternalDocumentation": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
