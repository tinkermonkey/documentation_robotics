{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/07-data-model-layer.json",
  "title": "Data Model Layer Schema",
  "description": "JSON Schema Draft 7 with custom extensions for database mapping, UI hints, and security metadata",
  "type": "object",
  "required": ["$schema", "type"],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "http://json-schema.org/draft-07/schema#"
    },
    "$id": {
      "type": "string",
      "format": "uri"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["object", "array", "string", "number", "integer", "boolean", "null"]
    },
    "properties": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/PropertySchema"
      }
    },
    "required": {
      "type": "array",
      "items": { "type": "string" }
    },
    "additionalProperties": {
      "oneOf": [
        { "type": "boolean" },
        { "$ref": "#/definitions/PropertySchema" }
      ]
    },
    "definitions": {
      "type": "object"
    },
    "x-archimate-ref": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to DataObject element"
    },
    "x-database": {
      "$ref": "#/definitions/DatabaseMapping"
    }
  },
  "definitions": {
    "PropertySchema": {
      "type": "object",
      "properties": {
        "type": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "array",
              "items": { "type": "string" }
            }
          ]
        },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "format": { "type": "string" },
        "default": {},
        "enum": { "type": "array" },
        "minimum": { "type": "number" },
        "maximum": { "type": "number" },
        "minLength": { "type": "integer" },
        "maxLength": { "type": "integer" },
        "pattern": { "type": "string" },
        "minItems": { "type": "integer" },
        "maxItems": { "type": "integer" },
        "uniqueItems": { "type": "boolean" },
        "items": {},
        "properties": { "type": "object" },
        "required": {
          "type": "array",
          "items": { "type": "string" }
        },
        "readOnly": { "type": "boolean" },
        "nullable": { "type": "boolean" },
        "$ref": { "type": "string" },
        "allOf": { "type": "array" },
        "anyOf": { "type": "array" },
        "oneOf": { "type": "array" },
        "not": { "type": "object" },
        "x-database": {
          "$ref": "#/definitions/ColumnMapping"
        },
        "x-ui": {
          "$ref": "#/definitions/UIHints"
        },
        "x-security": {
          "$ref": "#/definitions/SecurityMetadata"
        }
      }
    },
    "DatabaseMapping": {
      "type": "object",
      "properties": {
        "table": {
          "type": "string",
          "description": "Database table name"
        },
        "schema": {
          "type": "string",
          "description": "Database schema name"
        },
        "engine": {
          "type": "string",
          "description": "Database engine"
        },
        "indexes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "columns"],
            "properties": {
              "name": { "type": "string" },
              "columns": {
                "type": "array",
                "items": { "type": "string" }
              },
              "unique": { "type": "boolean" },
              "type": {
                "type": "string",
                "enum": ["BTREE", "HASH", "GIN", "GIST"]
              }
            }
          }
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": { "type": "string" },
              "type": {
                "type": "string",
                "enum": ["PRIMARY_KEY", "UNIQUE", "FOREIGN_KEY", "CHECK"]
              },
              "columns": {
                "type": "array",
                "items": { "type": "string" }
              },
              "check": { "type": "string" }
            }
          }
        }
      }
    },
    "ColumnMapping": {
      "type": "object",
      "properties": {
        "column": {
          "type": "string",
          "description": "Database column name"
        },
        "type": {
          "type": "string",
          "description": "SQL data type"
        },
        "nullable": {
          "type": "boolean"
        },
        "primaryKey": {
          "type": "boolean"
        },
        "autoIncrement": {
          "type": "boolean"
        },
        "unique": {
          "type": "boolean"
        },
        "default": {},
        "index": {
          "oneOf": [
            { "type": "boolean" },
            { "type": "string" }
          ]
        },
        "foreignKey": {
          "type": "object",
          "required": ["table", "column"],
          "properties": {
            "table": { "type": "string" },
            "column": { "type": "string" },
            "onDelete": {
              "type": "string",
              "enum": ["CASCADE", "SET_NULL", "RESTRICT", "NO_ACTION", "SET_DEFAULT"]
            },
            "onUpdate": {
              "type": "string",
              "enum": ["CASCADE", "SET_NULL", "RESTRICT", "NO_ACTION", "SET_DEFAULT"]
            }
          }
        }
      }
    },
    "UIHints": {
      "type": "object",
      "properties": {
        "component": {
          "type": "string",
          "enum": ["text-input", "textarea", "number-input", "email-input", "password-input", "date-picker", "datetime-picker", "select", "multi-select", "autocomplete", "checkbox", "radio-group", "toggle", "slider", "file-upload", "rich-text-editor", "color-picker"]
        },
        "label": { "type": "string" },
        "placeholder": { "type": "string" },
        "helpText": { "type": "string" },
        "order": { "type": "integer" },
        "readOnly": { "type": "boolean" },
        "hidden": { "type": "boolean" },
        "group": { "type": "string" },
        "dataSource": {
          "type": "object",
          "properties": {
            "endpoint": { "type": "string" },
            "method": { "type": "string" },
            "valueField": { "type": "string" },
            "labelField": { "type": "string" }
          }
        }
      }
    },
    "SecurityMetadata": {
      "type": "object",
      "properties": {
        "pii": {
          "type": "boolean",
          "description": "Contains personally identifiable information"
        },
        "encrypted": {
          "type": "boolean",
          "description": "Should be encrypted at rest"
        },
        "classification": {
          "type": "string",
          "enum": ["public", "internal", "confidential", "restricted"]
        },
        "retention": {
          "type": "string",
          "description": "Data retention period"
        },
        "masking": {
          "type": "string",
          "enum": ["none", "partial", "full", "hash"]
        },
        "redaction": {
          "type": "boolean",
          "description": "Should be redacted in logs"
        },
        "accessControl": {
          "type": "object",
          "properties": {
            "read": {
              "type": "array",
              "items": { "type": "string" }
            },
            "write": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
