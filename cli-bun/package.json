{
  "name": "@doc-robotics/cli-bun",
  "version": "0.1.0",
  "description": "Bun CLI for Documentation Robotics",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "dr": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-schemas",
    "copy-schemas": "cp -r src/schemas dist/",
    "dev": "node dist/cli.js",
    "test": "bun test tests/**/*.test.ts",
    "test:unit": "bun test tests/unit/**/*.test.ts",
    "test:integration": "bun test tests/integration/*.test.ts",
    "test:validators": "bun test tests/unit/validators/**/*.test.ts",
    "test:compatibility": "bun test tests/compatibility/**/*.test.ts",
    "test:compatibility:commands": "bun test tests/compatibility/commands.test.ts",
    "test:compatibility:validation": "bun test tests/compatibility/validation.test.ts",
    "test:compatibility:export": "bun test tests/compatibility/export.test.ts",
    "test:compatibility:api": "bun test tests/compatibility/api.test.ts",
    "test:compatibility:edge-cases": "bun test tests/compatibility/edge-cases.test.ts",
    "test:all": "bun test tests/**/*.test.ts"
  },
  "keywords": [
    "architecture",
    "documentation",
    "modeling",
    "federated"
  ],
  "author": "Documentation Robotics Contributors",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@clack/prompts": "^0.8.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.0",
    "ansis": "^3.0.0",
    "commander": "^12.0.0",
    "graphology": "^0.25.4",
    "graphology-traversal": "^0.3.1",
    "hono": "^4.11.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "bun": "^1.3.5",
    "typescript": "^5.3.0"
  }
}
