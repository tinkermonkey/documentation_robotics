{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/testing/contextvariation.node.schema.json",
  "title": "ContextVariation",
  "description": "Different context in which functionality can be invoked",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.contextvariation"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "contextvariation"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "contextType": {
          "type": "string",
          "enum": [
            "ui-entry",
            "api-entry",
            "event-triggered",
            "scheduled",
            "integration"
          ]
        }
      },
      "required": [
        "contextType"
      ],
      "additionalProperties": false
    }
  }
}
