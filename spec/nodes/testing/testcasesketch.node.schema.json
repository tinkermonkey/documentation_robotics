{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/testing/testcasesketch.node.schema.json",
  "title": "TestCaseSketch",
  "description": "Abstract test case selecting specific partition values",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.testcasesketch"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "testcasesketch"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "planned",
            "implemented",
            "automated",
            "manual",
            "blocked",
            "deprecated"
          ]
        }
      },
      "required": [
        "status"
      ],
      "additionalProperties": false
    }
  }
}
