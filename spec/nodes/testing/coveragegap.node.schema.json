{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/testing/coveragegap.node.schema.json",
  "title": "CoverageGap",
  "description": "Identified gap in test coverage requiring attention",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.coveragegap"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "coveragegap"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "severity": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        },
        "affectedRequirements": {
          "type": "string"
        }
      },
      "required": [
        "severity",
        "affectedRequirements"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "description"
  ]
}
