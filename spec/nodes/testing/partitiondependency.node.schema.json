{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/testing/partitiondependency.node.schema.json",
  "title": "PartitionDependency",
  "description": "Constraint between partition values across fields",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.partitiondependency"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "partitiondependency"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "dependsOnPartition": {
          "type": "string"
        },
        "dependsOnValue": {
          "type": "string"
        },
        "effect": {
          "type": "string",
          "enum": [
            "requires",
            "excludes",
            "enables",
            "modifies"
          ]
        },
        "affectedValues": {
          "type": "string"
        }
      },
      "required": [
        "dependsOnPartition",
        "dependsOnValue",
        "effect",
        "affectedValues"
      ],
      "additionalProperties": false
    }
  }
}
