{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/testing/coveragerequirement.node.schema.json",
  "title": "CoverageRequirement",
  "description": "Requirement for test coverage of a target",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.coveragerequirement"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "coveragerequirement"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "coverageCriteria": {
          "type": "string",
          "enum": [
            "exhaustive",
            "pairwise",
            "each-choice",
            "boundary",
            "risk-based",
            "happy-path",
            "error-path"
          ]
        },
        "priority": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        }
      },
      "required": [
        "coverageCriteria"
      ],
      "additionalProperties": false
    }
  }
}
