{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/testing/testcoveragetarget.node.schema.json",
  "title": "TestCoverageTarget",
  "description": "An artifact or functionality that requires test coverage",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.testcoveragetarget"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "testcoveragetarget"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "targetType": {
          "type": "string",
          "enum": [
            "workflow",
            "workflow-step",
            "form",
            "api-operation",
            "data-transform",
            "navigation-path",
            "integration",
            "composite"
          ]
        },
        "priority": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        }
      },
      "required": [
        "targetType"
      ],
      "additionalProperties": false
    }
  }
}
