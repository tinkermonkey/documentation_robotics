{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/apm/traceconfiguration.node.schema.json",
  "title": "TraceConfiguration",
  "description": "Distributed tracing configuration",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.traceconfiguration"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "traceconfiguration"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "serviceName": {
          "type": "string"
        },
        "serviceVersion": {
          "type": "string"
        },
        "deploymentEnvironment": {
          "type": "string"
        },
        "propagator": {
          "type": "string",
          "enum": [
            "w3c-trace-context",
            "w3c-baggage",
            "b3",
            "jaeger",
            "xray",
            "ottrace"
          ],
          "description": "PropagatorType classification"
        },
        "sampler_type": {
          "type": "string",
          "enum": [
            "always_on",
            "always_off",
            "traceidratio",
            "parentbased_always_on",
            "parentbased_always_off",
            "parentbased_traceidratio"
          ],
          "description": "SamplerType classification"
        }
      },
      "required": [
        "serviceName"
      ],
      "additionalProperties": false
    }
  }
}
