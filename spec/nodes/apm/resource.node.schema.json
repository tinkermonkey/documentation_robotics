{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/apm/resource.node.schema.json",
  "title": "Resource",
  "description": "Immutable representation of entity producing telemetry",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.resource"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "resource"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "schemaUrl": {
          "type": "string"
        },
        "droppedAttributesCount": {
          "type": "string"
        }
      },
      "required": [
        "droppedAttributesCount"
      ],
      "additionalProperties": false
    }
  }
}
