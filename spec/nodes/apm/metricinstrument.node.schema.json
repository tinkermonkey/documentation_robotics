{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/apm/metricinstrument.node.schema.json",
  "title": "MetricInstrument",
  "description": "Defines a specific metric measurement instrument (Counter, Gauge, Histogram, etc.) with its name, unit, description, and attributes. The fundamental unit of metric collection.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.metricinstrument"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "metricinstrument"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "counter",
            "up_down_counter",
            "gauge",
            "histogram",
            "observable_counter",
            "observable_up_down_counter",
            "observable_gauge"
          ]
        },
        "unit": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "aggregation_temporality": {
          "type": "string",
          "enum": [
            "delta",
            "cumulative"
          ],
          "description": "AggregationTemporality classification"
        }
      },
      "required": [
        "type",
        "unit"
      ],
      "additionalProperties": false
    }
  }
}
