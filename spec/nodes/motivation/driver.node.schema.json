{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/motivation/driver.node.schema.json",
  "title": "Driver",
  "description": "External or internal condition that motivates an organization",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.driver"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "driver"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "category": {
          "type": "string",
          "enum": [
            "market",
            "regulatory",
            "technology",
            "competitive",
            "operational",
            "strategic"
          ]
        }
      },
      "required": [
        "category"
      ],
      "additionalProperties": false
    }
  }
}
