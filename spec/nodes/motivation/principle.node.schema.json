{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/motivation/principle.node.schema.json",
  "title": "Principle",
  "description": "Normative property of all systems in a given context",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.principle"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "principle"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "category": {
          "type": "string",
          "enum": [
            "business",
            "data",
            "application",
            "technology",
            "security",
            "integration"
          ]
        }
      },
      "required": [
        "category"
      ],
      "additionalProperties": false
    }
  }
}
