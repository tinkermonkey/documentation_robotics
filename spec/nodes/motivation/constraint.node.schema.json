{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/motivation/constraint.node.schema.json",
  "title": "Constraint",
  "description": "Restriction on the way in which a system is realized",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.constraint"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "constraint"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "constraintType": {
          "type": "string",
          "enum": [
            "budget",
            "time",
            "technology",
            "regulatory",
            "organizational",
            "resource"
          ]
        }
      },
      "required": [
        "constraintType"
      ],
      "additionalProperties": false
    }
  }
}
