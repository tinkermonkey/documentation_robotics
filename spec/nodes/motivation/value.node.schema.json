{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/motivation/value.node.schema.json",
  "title": "Value",
  "description": "Relative worth, utility, or importance of something",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.value"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "value"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "valueType": {
          "type": "string",
          "enum": [
            "financial",
            "customer",
            "operational",
            "strategic",
            "social"
          ]
        }
      },
      "required": [
        "valueType"
      ],
      "additionalProperties": false
    }
  }
}
