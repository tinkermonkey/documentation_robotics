{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/fieldaccesscontrol.node.schema.json",
  "title": "FieldAccessControl",
  "description": "Field-level access control",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.fieldaccesscontrol"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "fieldaccesscontrol"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string"
        },
        "level": {
          "type": "string",
          "enum": [
            "open",
            "authenticated",
            "role-based",
            "attribute-based"
          ],
          "description": "AccessControlLevel classification"
        },
        "masking_strategy": {
          "type": "string",
          "enum": [
            "none",
            "partial",
            "full",
            "hash",
            "redact"
          ],
          "description": "MaskingStrategy classification"
        }
      },
      "required": [
        "field"
      ],
      "additionalProperties": false
    }
  }
}
