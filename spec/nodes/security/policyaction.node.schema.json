{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/policyaction.node.schema.json",
  "title": "PolicyAction",
  "description": "Action to take when policy rule matches",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.policyaction"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "policyaction"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "allow",
            "deny",
            "audit-access",
            "require-mfa",
            "require-approval",
            "apply-mask",
            "apply-encryption",
            "apply-retention",
            "notify",
            "rate-limit",
            "check-ip-whitelist",
            "check-time-window"
          ]
        },
        "parameters": {
          "type": "object"
        }
      },
      "required": [
        "type",
        "parameters"
      ],
      "additionalProperties": false
    }
  }
}
