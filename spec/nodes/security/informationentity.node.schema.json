{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/informationentity.node.schema.json",
  "title": "InformationEntity",
  "description": "Information asset with fine-grained rights",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.informationentity"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "informationentity"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "classification": {
          "type": "string",
          "enum": [
            "public",
            "internal",
            "confidential",
            "restricted"
          ]
        },
        "encryption": {
          "type": "string",
          "enum": [
            "none",
            "in-transit",
            "at-rest",
            "both",
            "end-to-end"
          ],
          "description": "EncryptionRequirement classification"
        }
      },
      "required": [
        "classification"
      ],
      "additionalProperties": false
    }
  }
}
