{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/classification.node.schema.json",
  "title": "Classification",
  "description": "A single classification level defining data sensitivity and protection requirements",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.classification"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "classification"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": [
            "public",
            "internal",
            "confidential",
            "restricted"
          ]
        },
        "label": {
          "type": "string"
        }
      },
      "required": [
        "level",
        "label"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "description"
  ]
}
