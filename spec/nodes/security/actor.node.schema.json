{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/actor.node.schema.json",
  "title": "Actor",
  "description": "Actor in the system (beyond roles)",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.actor"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "actor"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "role",
            "agent",
            "organization",
            "system"
          ]
        },
        "trustLevel": {
          "type": "string",
          "enum": [
            "none",
            "low",
            "medium",
            "high",
            "full"
          ]
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  }
}
