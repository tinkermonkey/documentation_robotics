{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/auditconfig.node.schema.json",
  "title": "AuditConfig",
  "description": "Configuration for security audit logging, specifying what events to capture, retention periods, storage destinations, and compliance requirements. Enables security monitoring and forensic analysis.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.auditconfig"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "auditconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "level": {
          "type": "string",
          "enum": [
            "none",
            "minimal",
            "standard",
            "comprehensive"
          ]
        },
        "includePayload": {
          "type": "boolean"
        },
        "includeHeaders": {
          "type": "boolean"
        },
        "sanitizeFields": {
          "type": "string"
        },
        "destination_type": {
          "type": "string",
          "enum": [
            "database",
            "log-service",
            "siem",
            "file"
          ],
          "description": "DestinationType classification"
        }
      },
      "required": [
        "level",
        "sanitizeFields"
      ],
      "additionalProperties": false
    }
  }
}
