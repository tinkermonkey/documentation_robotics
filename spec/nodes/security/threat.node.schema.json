{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/threat.node.schema.json",
  "title": "Threat",
  "description": "Security threat and countermeasures",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.threat"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "threat"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "threatens": {
          "type": "string"
        },
        "likelihood": {
          "type": "string",
          "enum": [
            "very-low",
            "low",
            "medium",
            "high",
            "very-high"
          ]
        },
        "impact": {
          "type": "string",
          "enum": [
            "negligible",
            "low",
            "medium",
            "high",
            "critical"
          ]
        }
      },
      "required": [
        "threatens",
        "likelihood",
        "impact"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "description"
  ]
}
