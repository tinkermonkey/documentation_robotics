{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/authenticationconfig.node.schema.json",
  "title": "AuthenticationConfig",
  "description": "Authentication configuration",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.authenticationconfig"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "authenticationconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "enum": [
            "oauth2",
            "openid-connect",
            "saml",
            "jwt",
            "session",
            "api-key",
            "certificate"
          ]
        },
        "sessionTimeout": {
          "type": "integer"
        },
        "mfaRequired": {
          "type": "boolean"
        },
        "passwordPolicy": {
          "type": "string"
        }
      },
      "required": [
        "provider",
        "sessionTimeout"
      ],
      "additionalProperties": false
    }
  }
}
