{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/countermeasure.node.schema.json",
  "title": "Countermeasure",
  "description": "Security countermeasure for a threat",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.countermeasure"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "countermeasure"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "effectiveness": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "very-high"
          ]
        },
        "implemented": {
          "type": "boolean"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "description"
  ]
}
