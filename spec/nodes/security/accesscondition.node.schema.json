{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/accesscondition.node.schema.json",
  "title": "AccessCondition",
  "description": "Conditional access rule",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.accesscondition"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "accesscondition"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string"
        },
        "operator": {
          "type": "string",
          "enum": [
            "equals",
            "notEquals",
            "in",
            "notIn",
            "greaterThan",
            "lessThan",
            "greaterThanOrEqual",
            "lessThanOrEqual",
            "contains",
            "notContains",
            "startsWith",
            "endsWith",
            "matches",
            "exists",
            "notExists"
          ]
        },
        "value": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "source": {
          "type": "string",
          "enum": [
            "constant",
            "user-attribute",
            "resource-field",
            "context",
            "computed"
          ]
        }
      },
      "required": [
        "field",
        "operator",
        "value",
        "message",
        "source"
      ],
      "additionalProperties": false
    }
  }
}
