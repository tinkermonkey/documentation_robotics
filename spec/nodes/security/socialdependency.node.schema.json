{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/socialdependency.node.schema.json",
  "title": "SocialDependency",
  "description": "Dependencies and trust between actors",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.socialdependency"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "socialdependency"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "depender": {
          "type": "string"
        },
        "dependee": {
          "type": "string"
        },
        "resource": {
          "type": "string"
        },
        "objective": {
          "type": "string"
        },
        "criticality": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "critical"
          ]
        }
      },
      "required": [
        "depender",
        "dependee",
        "resource",
        "objective",
        "criticality"
      ],
      "additionalProperties": false
    }
  }
}
