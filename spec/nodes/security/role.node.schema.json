{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/role.node.schema.json",
  "title": "Role",
  "description": "User role definition",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.role"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "role"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string"
        },
        "level": {
          "type": "integer"
        },
        "inheritsFrom": {
          "type": "string"
        }
      },
      "required": [
        "displayName",
        "level",
        "inheritsFrom"
      ],
      "additionalProperties": false
    }
  }
}
