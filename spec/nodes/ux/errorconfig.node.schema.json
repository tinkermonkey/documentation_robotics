{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/ux/errorconfig.node.schema.json",
  "title": "ErrorConfig",
  "description": "Configuration for error handling and display within UI components, specifying error message formats, retry behavior, fallback content, and user guidance. Ensures consistent error UX.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.errorconfig"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "errorconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "showNotification": {
          "type": "boolean"
        },
        "notificationType": {
          "type": "string",
          "enum": [
            "toast",
            "alert",
            "inline",
            "banner",
            "none"
          ]
        },
        "errorMessage": {
          "type": "string"
        },
        "defaultErrorMessage": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
