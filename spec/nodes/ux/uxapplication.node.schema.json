{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/ux/uxapplication.node.schema.json",
  "title": "UXApplication",
  "description": "Application-level UX configuration that groups UXSpecs and defines shared settings",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.uxapplication"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "uxapplication"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "channel": {
          "type": "string",
          "enum": [
            "visual",
            "voice",
            "chat",
            "sms",
            "multimodal"
          ]
        }
      },
      "required": [
        "channel"
      ],
      "additionalProperties": false
    }
  }
}
