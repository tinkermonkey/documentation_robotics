{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/ux/uxspec.node.schema.json",
  "title": "UXSpec",
  "description": "Complete UX specification for a single experience (visual, voice, chat, SMS)",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.uxspec"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "uxspec"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "experience": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
