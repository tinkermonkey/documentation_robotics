{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/ux/condition.node.schema.json",
  "title": "Condition",
  "description": "Boolean expression for guard conditions",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.condition"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "condition"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "expression": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
