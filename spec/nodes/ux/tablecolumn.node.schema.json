{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/ux/tablecolumn.node.schema.json",
  "title": "TableColumn",
  "description": "Configuration for a single column within a data table component, specifying header, data binding, sorting, filtering, and rendering options. Defines table structure and behavior.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.tablecolumn"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "tablecolumn"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "header": {
          "type": "string"
        },
        "field": {
          "type": "string"
        },
        "width": {
          "type": "string"
        },
        "minWidth": {
          "type": "string"
        },
        "maxWidth": {
          "type": "string"
        },
        "display_type": {
          "type": "string",
          "enum": [
            "text",
            "number",
            "currency",
            "date",
            "datetime",
            "boolean",
            "badge",
            "link",
            "image",
            "avatar",
            "actions",
            "custom"
          ],
          "description": "ColumnDisplayType classification"
        },
        "sort_direction": {
          "type": "string",
          "enum": [
            "asc",
            "desc"
          ],
          "description": "SortDirection classification"
        },
        "sticky": {
          "type": "string",
          "enum": [
            "left",
            "right",
            "none"
          ],
          "description": "StickyPosition classification"
        },
        "text_align": {
          "type": "string",
          "enum": [
            "left",
            "center",
            "right"
          ],
          "description": "TextAlign classification"
        }
      },
      "required": [
        "header",
        "field"
      ],
      "additionalProperties": false
    }
  }
}
