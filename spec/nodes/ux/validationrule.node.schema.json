{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/ux/validationrule.node.schema.json",
  "title": "ValidationRule",
  "description": "Client-side validation rule for a field",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.validationrule"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "validationrule"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "required",
            "minLength",
            "maxLength",
            "pattern",
            "email",
            "url",
            "min",
            "max",
            "custom"
          ]
        },
        "message": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  }
}
