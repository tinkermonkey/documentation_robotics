{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/ux/dataconfig.node.schema.json",
  "title": "DataConfig",
  "description": "Configuration for data binding and state management within UI components, defining data sources, transformation pipelines, and update triggers. Manages component data flow.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.dataconfig"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "dataconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "enum": [
            "api-response",
            "form-data",
            "route-params",
            "query-params",
            "local-storage",
            "constant",
            "computed"
          ]
        },
        "target": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      },
      "required": [
        "source",
        "target"
      ],
      "additionalProperties": false
    }
  }
}
