{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/ux/statetransition.node.schema.json",
  "title": "StateTransition",
  "description": "Transition from current state to another state",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.statetransition"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "statetransition"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "to": {
          "type": "string"
        },
        "trigger": {
          "type": "string",
          "enum": [
            "success",
            "failure",
            "submit",
            "cancel",
            "click",
            "timeout",
            "dataReady",
            "custom"
          ]
        }
      },
      "required": [
        "trigger"
      ],
      "additionalProperties": false
    }
  }
}
