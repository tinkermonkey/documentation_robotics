{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/data-model/x-security.node.schema.json",
  "title": "x-security",
  "description": "Security and privacy metadata",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-model.x-security"
    },
    "layer_id": {
      "const": "data-model"
    },
    "type": {
      "const": "x-security"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "pii": {
          "type": "boolean"
        },
        "encrypted": {
          "type": "boolean"
        },
        "classification": {
          "type": "string"
        },
        "retention": {
          "type": "string"
        },
        "masking": {
          "type": "string"
        },
        "redaction": {
          "type": "boolean"
        }
      },
      "required": [
        "pii",
        "encrypted",
        "classification",
        "retention",
        "masking",
        "redaction"
      ],
      "additionalProperties": false
    }
  }
}
