{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/data-store/trigger.node.schema.json",
  "title": "Trigger",
  "description": "A database trigger that automatically executes in response to data modification events (INSERT, UPDATE, DELETE). Enables reactive database behavior and data integrity enforcement.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-store.trigger"
    },
    "layer_id": {
      "const": "data-store"
    },
    "type": {
      "const": "trigger"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "table": {
          "type": "string"
        },
        "timing": {
          "type": "string",
          "enum": [
            "BEFORE",
            "AFTER",
            "INSTEAD_OF"
          ]
        },
        "events": {
          "type": "string"
        },
        "forEach": {
          "type": "string",
          "enum": [
            "ROW",
            "STATEMENT"
          ]
        },
        "functionName": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "event": {
          "type": "string",
          "enum": [
            "INSERT",
            "UPDATE",
            "DELETE",
            "TRUNCATE"
          ],
          "description": "TriggerEvent classification"
        }
      },
      "required": [
        "table",
        "timing",
        "events",
        "forEach",
        "functionName",
        "condition"
      ],
      "additionalProperties": false
    }
  }
}
