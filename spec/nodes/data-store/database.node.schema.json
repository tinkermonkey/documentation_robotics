{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/data-store/database.node.schema.json",
  "title": "Database",
  "description": "Database instance containing schemas",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-store.database"
    },
    "layer_id": {
      "const": "data-store"
    },
    "type": {
      "const": "database"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "PostgreSQL",
            "MySQL",
            "SQLite",
            "MariaDB",
            "Oracle",
            "SQL Server"
          ]
        },
        "version": {
          "type": "string"
        },
        "charset": {
          "type": "string"
        },
        "collation": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "version"
      ],
      "additionalProperties": false
    }
  }
}
