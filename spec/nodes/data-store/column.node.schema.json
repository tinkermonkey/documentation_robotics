{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/data-store/column.node.schema.json",
  "title": "Column",
  "description": "Table column definition",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-store.column"
    },
    "layer_id": {
      "const": "data-store"
    },
    "type": {
      "const": "column"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "dataType": {
          "type": "string"
        },
        "nullable": {
          "type": "boolean"
        },
        "defaultValue": {
          "type": "string"
        },
        "generated": {
          "type": "string"
        },
        "generation_type": {
          "type": "string",
          "enum": [
            "ALWAYS",
            "BY_DEFAULT"
          ],
          "description": "GenerationType classification"
        },
        "data_type": {
          "type": "string",
          "enum": [
            "SMALLINT",
            "INTEGER",
            "BIGINT",
            "SERIAL",
            "BIGSERIAL",
            "DECIMAL(precision, scale)",
            "NUMERIC(precision, scale)",
            "REAL",
            "DOUBLE PRECISION",
            "CHAR(length)",
            "VARCHAR(length)",
            "TEXT",
            "BYTEA",
            "BLOB",
            "BOOLEAN",
            "DATE",
            "TIME",
            "TIMESTAMP",
            "TIMESTAMPTZ",
            "INTERVAL",
            "JSON",
            "JSONB",
            "UUID",
            "INTEGER[]",
            "TEXT[]",
            "etc.",
            "ENUM('value1', 'value2', ...)"
          ],
          "description": "SQLDataType classification"
        }
      },
      "required": [
        "dataType"
      ],
      "additionalProperties": false
    }
  }
}
