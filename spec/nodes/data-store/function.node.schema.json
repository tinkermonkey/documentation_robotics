{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/data-store/function.node.schema.json",
  "title": "Function",
  "description": "A stored database function that encapsulates reusable computation logic. Returns a value and can be used in SQL expressions for data transformation or validation.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-store.function"
    },
    "layer_id": {
      "const": "data-store"
    },
    "type": {
      "const": "function"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "schema": {
          "type": "string"
        },
        "language": {
          "type": "string",
          "enum": [
            "SQL",
            "PLPGSQL",
            "PLPYTHON3U",
            "PLPERL",
            "PLPYTHON",
            "C"
          ]
        },
        "returnType": {
          "type": "string"
        },
        "volatility": {
          "type": "string",
          "enum": [
            "IMMUTABLE",
            "STABLE",
            "VOLATILE"
          ]
        },
        "parallel": {
          "type": "string",
          "enum": [
            "UNSAFE",
            "RESTRICTED",
            "SAFE"
          ]
        },
        "strict": {
          "type": "boolean"
        },
        "security": {
          "type": "string",
          "enum": [
            "INVOKER",
            "DEFINER"
          ]
        },
        "cost": {
          "type": "integer"
        },
        "rows": {
          "type": "integer"
        },
        "parameter_mode": {
          "type": "string",
          "enum": [
            "IN",
            "OUT",
            "INOUT",
            "VARIADIC"
          ],
          "description": "ParameterMode classification"
        }
      },
      "required": [
        "language",
        "returnType"
      ],
      "additionalProperties": false
    }
  }
}
