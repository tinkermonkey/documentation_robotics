{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/data-store/constraint.node.schema.json",
  "title": "Constraint",
  "description": "Table constraint",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-store.constraint"
    },
    "layer_id": {
      "const": "data-store"
    },
    "type": {
      "const": "constraint"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "PRIMARY_KEY",
            "UNIQUE",
            "FOREIGN_KEY",
            "CHECK",
            "EXCLUSION"
          ]
        },
        "on_delete": {
          "type": "string",
          "enum": [
            "CASCADE",
            "SET_NULL",
            "SET_DEFAULT",
            "RESTRICT",
            "NO_ACTION"
          ],
          "description": "ReferentialAction classification"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  }
}
