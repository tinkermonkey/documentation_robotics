{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/data-store/index.node.schema.json",
  "title": "Index",
  "description": "Database index for query optimization",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-store.index"
    },
    "layer_id": {
      "const": "data-store"
    },
    "type": {
      "const": "index"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "columns": {
          "type": "string"
        },
        "unique": {
          "type": "boolean"
        },
        "method": {
          "type": "string",
          "enum": [
            "BTREE",
            "HASH",
            "GIN",
            "GIST",
            "BRIN",
            "SP-GIST"
          ]
        },
        "where": {
          "type": "string"
        },
        "include": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
