{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/api/pathitem.node.schema.json",
  "title": "PathItem",
  "description": "Operations available on a path",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.pathitem"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "pathitem"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "summary": {
          "type": "string"
        },
        "servers": {
          "type": "string"
        },
        "parameters": {
          "type": "string"
        }
      },
      "required": [
        "servers",
        "parameters"
      ],
      "additionalProperties": false
    }
  }
}
