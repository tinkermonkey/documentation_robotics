{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/api/header.node.schema.json",
  "title": "Header",
  "description": "Defines HTTP header parameters for requests or responses, specifying name, schema, required status, and description. Documents header-based communication requirements.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.header"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "header"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "deprecated": {
          "type": "boolean"
        },
        "allowEmptyValue": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}
