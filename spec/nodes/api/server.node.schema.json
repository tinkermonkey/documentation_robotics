{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/api/server.node.schema.json",
  "title": "Server",
  "description": "Server where the API is available",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.server"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "server"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "variables": {
          "type": "string"
        }
      },
      "required": [
        "url",
        "variables"
      ],
      "additionalProperties": false
    }
  }
}
