{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/application/applicationinterface.node.schema.json",
  "title": "ApplicationInterface",
  "description": "Point of access where application service is available",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "application.applicationinterface"
    },
    "layer_id": {
      "const": "application"
    },
    "type": {
      "const": "applicationinterface"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "protocol": {
          "type": "string",
          "enum": [
            "REST",
            "GraphQL",
            "SOAP",
            "gRPC",
            "WebSocket",
            "Message Queue"
          ]
        }
      },
      "required": [
        "protocol"
      ],
      "additionalProperties": false
    }
  }
}
