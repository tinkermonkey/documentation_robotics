{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/application/applicationcomponent.node.schema.json",
  "title": "ApplicationComponent",
  "description": "Modular, deployable, and replaceable part of a system",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "application.applicationcomponent"
    },
    "layer_id": {
      "const": "application"
    },
    "type": {
      "const": "applicationcomponent"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "frontend",
            "backend",
            "mobile",
            "desktop",
            "service"
          ]
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  }
}
