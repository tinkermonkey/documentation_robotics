{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/application/applicationinteraction.node.schema.json",
  "title": "ApplicationInteraction",
  "description": "Unit of collective application behavior",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "application.applicationinteraction"
    },
    "layer_id": {
      "const": "application"
    },
    "type": {
      "const": "applicationinteraction"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "pattern": {
          "type": "string",
          "enum": [
            "request-response",
            "publish-subscribe",
            "async-messaging",
            "streaming"
          ]
        }
      },
      "required": [
        "pattern"
      ],
      "additionalProperties": false
    }
  }
}
