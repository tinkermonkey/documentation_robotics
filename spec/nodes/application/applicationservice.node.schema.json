{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/application/applicationservice.node.schema.json",
  "title": "ApplicationService",
  "description": "Service that exposes application functionality",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "application.applicationservice"
    },
    "layer_id": {
      "const": "application"
    },
    "type": {
      "const": "applicationservice"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "serviceType": {
          "type": "string",
          "enum": [
            "synchronous",
            "asynchronous",
            "batch",
            "streaming"
          ]
        }
      },
      "required": [
        "serviceType"
      ],
      "additionalProperties": false
    }
  }
}
