{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/technology/technologyinterface.node.schema.json",
  "title": "TechnologyInterface",
  "description": "Point of access where technology services are available",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.technologyinterface"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "technologyinterface"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "protocol": {
          "type": "string",
          "enum": [
            "HTTP",
            "HTTPS",
            "TCP",
            "UDP",
            "WebSocket",
            "AMQP",
            "MQTT",
            "SQL"
          ]
        }
      },
      "required": [
        "protocol"
      ],
      "additionalProperties": false
    }
  }
}
