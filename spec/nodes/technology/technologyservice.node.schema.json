{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/technology/technologyservice.node.schema.json",
  "title": "TechnologyService",
  "description": "Externally visible unit of technology functionality",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.technologyservice"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "technologyservice"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "serviceType": {
          "type": "string",
          "enum": [
            "infrastructure",
            "platform",
            "storage",
            "compute",
            "network"
          ]
        }
      },
      "required": [
        "serviceType"
      ],
      "additionalProperties": false
    }
  }
}
