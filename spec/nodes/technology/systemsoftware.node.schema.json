{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/technology/systemsoftware.node.schema.json",
  "title": "SystemSoftware",
  "description": "Software that provides platform for applications",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.systemsoftware"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "systemsoftware"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "softwareType": {
          "type": "string",
          "enum": [
            "operating-system",
            "database",
            "middleware",
            "container-runtime",
            "web-server",
            "message-broker"
          ]
        }
      },
      "required": [
        "softwareType"
      ],
      "additionalProperties": false
    }
  }
}
