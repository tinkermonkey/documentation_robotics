{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/navigation/guardaction.node.schema.json",
  "title": "GuardAction",
  "description": "Action when guard denies access",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.guardaction"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "guardaction"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "enum": [
            "redirect",
            "show-error",
            "navigate-back",
            "abort"
          ]
        },
        "target": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "preserveRoute": {
          "type": "boolean"
        }
      },
      "required": [
        "action",
        "target",
        "message",
        "preserveRoute"
      ],
      "additionalProperties": false
    }
  }
}
