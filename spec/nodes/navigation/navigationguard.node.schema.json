{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/navigation/navigationguard.node.schema.json",
  "title": "NavigationGuard",
  "description": "Guard condition for route access",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.navigationguard"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "navigationguard"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "authentication",
            "authorization",
            "validation",
            "data-loaded",
            "custom"
          ]
        },
        "order": {
          "type": "integer"
        }
      },
      "required": [
        "type",
        "order"
      ],
      "additionalProperties": false
    }
  }
}
