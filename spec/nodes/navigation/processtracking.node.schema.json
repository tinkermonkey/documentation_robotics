{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/navigation/processtracking.node.schema.json",
  "title": "ProcessTracking",
  "description": "Tracks business process instance across flow (Gap #3: Process correlation)",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.processtracking"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "processtracking"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "processInstanceId": {
          "type": "string"
        },
        "resumable": {
          "type": "boolean"
        },
        "timeoutMinutes": {
          "type": "integer"
        },
        "stateCheckpoint": {
          "type": "boolean"
        }
      },
      "required": [
        "processInstanceId",
        "timeoutMinutes",
        "stateCheckpoint"
      ],
      "additionalProperties": false
    }
  }
}
