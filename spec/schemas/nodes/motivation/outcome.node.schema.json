{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Outcome",
  "description": "End result intended or already achieved by the organization or a system, distinct from a Goal which expresses the desired direction.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.outcome"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "outcome"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "documentation": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["planned", "in-progress", "achieved", "abandoned", "at-risk"],
          "description": "Lifecycle state of the outcome"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "required": ["status"],
      "additionalProperties": false
    }
  }
}
