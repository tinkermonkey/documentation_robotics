{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Principle",
  "description": "Normative property of all systems in a given context, or a statement governing how an organization intends to fulfill its mission and guide decision-making.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.principle"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "principle"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "documentation": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": ["architecture", "data", "security", "operational", "financial", "integration"],
          "description": "Domain area to which this architectural principle applies"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "required": ["category"],
      "additionalProperties": false
    }
  }
}
