{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stakeholder",
  "description": "Individual, team, or organization that has an interest in, or is affected by, the effects of the architecture.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.stakeholder"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "stakeholder"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["internal", "external", "regulatory", "customer", "sponsor", "end-user"],
          "description": "Classification of the stakeholder's relationship to the organization"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
