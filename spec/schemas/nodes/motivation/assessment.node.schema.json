{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Assessment",
  "description": "Outcome of analysis of the state of affairs",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.assessment"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "assessment"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "assessmentType": {
          "type": "string"
        }
      },
      "required": ["assessmentType"],
      "additionalProperties": false
    }
  }
}
