{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Value",
  "description": "Relative worth, utility, or importance of a concept, phenomenon, or outcome to one or more stakeholders.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.value"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "value"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "valueType": {
          "type": "string",
          "enum": ["financial", "strategic", "operational", "reputational", "social"],
          "description": "Category of worth or utility this value represents"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "required": ["valueType"],
      "additionalProperties": false
    }
  }
}
