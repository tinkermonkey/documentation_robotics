{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Requirement",
  "description": "Statement of need that must be realized",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "motivation.requirement"
    },
    "layer_id": {
      "const": "motivation"
    },
    "type": {
      "const": "requirement"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "requirementType": {
          "type": "string",
          "enum": ["functional", "non-functional", "regulatory", "business", "quality"],
          "description": "Classification of what aspect of the system this requirement addresses"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low", "informational"],
          "description": "Priority level of this requirement"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "required": ["requirementType", "priority"],
      "additionalProperties": false
    }
  }
}
