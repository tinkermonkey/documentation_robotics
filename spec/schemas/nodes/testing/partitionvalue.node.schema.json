{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PartitionValue",
  "description": "An individual equivalence class within an InputSpacePartition, characterized by a label, representative value, and optional constraint expression, used to enumerate the testable categories of an input dimension per IEEE 829-2008 test design specification.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.partitionvalue"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "partitionvalue"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "constraint": {
          "type": "string"
        },
        "constraintExpression": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "valid",
            "invalid",
            "boundary-valid",
            "boundary-invalid",
            "null-empty",
            "special-character"
          ],
          "description": "Equivalence partition category for this value"
        },
        "representativeValue": {
          "type": "string"
        }
      },
      "required": [
        "label",
        "constraint",
        "constraintExpression",
        "category",
        "representativeValue"
      ],
      "additionalProperties": false
    }
  }
}
