{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TargetCoverageSummary",
  "description": "Coverage metrics summary for a single test coverage target",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.targetcoveragesummary"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "targetcoveragesummary"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "targetRef": {
          "type": "string"
        },
        "sketchCount": {
          "type": "integer"
        },
        "implementedCount": {
          "type": "integer"
        },
        "automatedCount": {
          "type": "integer"
        },
        "coveragePercentage": {
          "type": "number"
        }
      },
      "required": [
        "targetRef",
        "sketchCount",
        "implementedCount",
        "automatedCount"
      ],
      "additionalProperties": false
    }
  }
}
