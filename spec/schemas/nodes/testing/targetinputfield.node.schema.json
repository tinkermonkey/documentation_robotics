{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TargetInputField",
  "description": "Input field associated with a coverage target",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.targetinputfield"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "targetinputfield"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "fieldRef": {
          "type": "string",
          "description": "ID of the referenced field element in the API layer (e.g., an API parameter) or Data Model layer (e.g., a data-model property)"
        },
        "partitionRef": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "relevance": {
          "type": "string",
          "enum": ["required", "optional", "conditional", "not-applicable"],
          "description": "Whether this field must be included in test case input specifications"
        }
      },
      "required": ["fieldRef", "partitionRef"],
      "additionalProperties": false
    }
  }
}
