{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ContextVariation",
  "description": "A distinct runtime or environmental context under which a coverage target may be invoked, used to parameterize test design across test environment configurations.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.contextvariation"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "contextvariation"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "contextType": {
          "type": "string",
          "enum": ["functional", "load", "security", "regression", "smoke", "exploratory"],
          "description": "The category of test context this variation represents"
        },
        "environmentFactors": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["contextType"],
      "additionalProperties": false
    }
  }
}
