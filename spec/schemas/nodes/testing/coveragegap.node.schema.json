{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CoverageGap",
  "description": "Identified gap in test coverage requiring attention",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.coveragegap"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "coveragegap"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "severity": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Risk level of leaving this gap unaddressed"
        },
        "affectedRequirements": {
          "type": "string"
        },
        "targetRef": {
          "type": "string",
          "description": "ID of the testing.testcoveragetarget where this gap was identified"
        }
      },
      "required": ["severity", "affectedRequirements"],
      "additionalProperties": false
    }
  }
}
