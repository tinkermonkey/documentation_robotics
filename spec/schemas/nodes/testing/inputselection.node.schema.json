{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InputSelection",
  "description": "A concrete input value assignment for a TestCaseSketch, binding an abstract partition representative value (selectedValue) to a specific concrete test datum (concreteValue), per test case input specification in IEEE 829-2008.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "testing.inputselection"
    },
    "layer_id": {
      "const": "testing"
    },
    "type": {
      "const": "inputselection"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "partitionRef": {
          "type": "string"
        },
        "selectedValue": {
          "type": "string"
        },
        "concreteValue": {
          "type": "string"
        },
        "valueSource": {
          "type": "string",
          "enum": ["manual", "generated", "data-driven", "fixture"],
          "description": "How the concrete value was obtained: manually authored, algorithmically generated, drawn from a data set, or loaded from a test fixture"
        }
      },
      "required": ["partitionRef", "selectedValue", "concreteValue", "valueSource"],
      "additionalProperties": false
    }
  }
}
