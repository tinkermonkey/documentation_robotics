{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BusinessService",
  "description": "An externally visible behavior element that fulfills a business need for a customer or stakeholder. Defined from the consumer perspective; the internal realization (via BusinessProcess or BusinessFunction) is encapsulated and not exposed.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "business.businessservice"
    },
    "layer_id": {
      "const": "business"
    },
    "type": {
      "const": "businessservice"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "additionalProperties": false
    }
  }
}
