{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "description": "Coherent collection of services with a value",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "business.product"
    },
    "layer_id": {
      "const": "business"
    },
    "type": {
      "const": "product"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "services": {
          "type": "array",
          "description": "Contains relationship"
        },
        "contracts": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "additionalProperties": false
    }
  }
}
