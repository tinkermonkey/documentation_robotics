{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/navigation/breadcrumbconfig.node.schema.json",
  "title": "BreadcrumbConfig",
  "description": "Configuration for breadcrumb navigation display, specifying path generation rules, separator styles, truncation behavior, and home link settings. Provides users with location context and navigation history.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.breadcrumbconfig"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "breadcrumbconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "labelTemplate": {
          "type": "string"
        },
        "showHome": {
          "type": "boolean"
        },
        "homeLabel": {
          "type": "string"
        },
        "homeRoute": {
          "type": "string"
        }
      },
      "required": [
        "label"
      ],
      "additionalProperties": false
    }
  }
}
