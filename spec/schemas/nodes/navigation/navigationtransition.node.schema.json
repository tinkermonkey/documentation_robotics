{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NavigationTransition",
  "description": "Transition from one route to another",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.navigationtransition"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "navigationtransition"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "from": {
          "type": "string"
        },
        "to": {
          "type": "string"
        },
        "trigger": {
          "type": "string",
          "enum": ["user-click", "programmatic", "timeout", "browser-back", "redirect"],
          "description": "Mechanism that initiates the route transition: user-click (explicit user interaction), programmatic (code-driven), timeout (time-based), browser-back (browser history navigation), redirect (automatic server/guard redirect)."
        },
        "description": {
          "type": "string"
        },
        "guards": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["from", "to", "trigger"],
      "additionalProperties": false
    }
  }
}
