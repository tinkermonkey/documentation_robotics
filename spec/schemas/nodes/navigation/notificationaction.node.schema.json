{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NotificationAction",
  "description": "Notification to send during flow step",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.notificationaction"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "notificationaction"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "template": {
          "type": "string"
        },
        "recipients": {
          "type": "string"
        }
      },
      "required": ["type", "template", "recipients"],
      "additionalProperties": false
    }
  }
}
