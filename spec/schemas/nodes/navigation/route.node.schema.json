{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Route",
  "description": "Single route/destination in the application (channel-agnostic)",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.route"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "route"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["public", "protected", "redirect", "alias", "lazy"],
          "description": "Access and loading classification: public (no auth), protected (requires auth), redirect (auto-forwards), alias (multiple paths to same component), lazy (code-split, loaded on demand)."
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
