{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FlowAnalytics",
  "description": "Analytics for funnel tracking (Gap #9: Funnel analytics)",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.flowanalytics"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "flowanalytics"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "funnelMetrics": {
          "type": "string"
        },
        "conversionGoal": {
          "type": "string"
        },
        "dropoffAlerts": {
          "type": "string"
        }
      },
      "required": [
        "funnelMetrics",
        "conversionGoal"
      ],
      "additionalProperties": false
    }
  }
}
