{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/navigation/contextvariable.node.schema.json",
  "title": "ContextVariable",
  "description": "Shared variable across flow steps (Gap #1: Cross-experience state)",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.contextvariable"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "contextvariable"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "schemaRef": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        },
        "persistedIn": {
          "type": "string"
        },
        "defaultValue": {
          "type": "string"
        }
      },
      "required": [
        "schemaRef",
        "scope",
        "persistedIn"
      ],
      "additionalProperties": false
    }
  }
}
