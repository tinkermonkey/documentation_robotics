{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/navigation/guardcondition.node.schema.json",
  "title": "GuardCondition",
  "description": "Condition expression for guard",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "navigation.guardcondition"
    },
    "layer_id": {
      "const": "navigation"
    },
    "type": {
      "const": "guardcondition"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "expression": {
          "type": "string"
        },
        "async": {
          "type": "boolean"
        },
        "timeout": {
          "type": "integer"
        }
      },
      "required": [
        "expression",
        "timeout"
      ],
      "additionalProperties": false
    }
  }
}
