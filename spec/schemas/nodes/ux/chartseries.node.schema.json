{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/ux/chartseries.node.schema.json",
  "title": "ChartSeries",
  "description": "Configuration for a data series within a chart component, specifying data source, visualization type, colors, and legend properties. Defines how data is visualized in charts.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.chartseries"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "chartseries"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "dataField": {
          "type": "string"
        },
        "categoryField": {
          "type": "string"
        }
      },
      "required": [
        "label",
        "dataField"
      ],
      "additionalProperties": false
    }
  }
}
