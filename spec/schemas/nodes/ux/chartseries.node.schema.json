{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChartSeries",
  "description": "Configuration for a data series within a chart component, specifying data source, visualization type, colors, and legend properties. Defines how data is visualized in charts.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.chartseries"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "chartseries"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["line", "bar", "column", "pie", "donut", "area", "scatter", "bubble", "heatmap"],
          "description": "Visualization type for this data series."
        },
        "dataField": {
          "type": "string"
        },
        "categoryField": {
          "type": "string"
        },
        "lineStyle": {
          "type": "string",
          "enum": ["solid", "dashed", "dotted", "double", "none"],
          "description": "CSS border/line style applied to line chart series rendering, per CSS Border specification."
        }
      },
      "required": ["label", "dataField"],
      "additionalProperties": false
    }
  }
}
