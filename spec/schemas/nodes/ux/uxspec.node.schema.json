{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UXSpec",
  "description": "Complete UX specification for a single experience (visual, voice, chat, SMS)",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.uxspec"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "uxspec"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "experience": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "additionalProperties": false
    }
  }
}
