{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LibraryComponent",
  "description": "Reusable UI component definition that can be instantiated in multiple UXSpecs",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.librarycomponent"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "librarycomponent"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "form",
            "table",
            "chart",
            "navigation",
            "feedback",
            "layout",
            "input",
            "display"
          ],
          "description": "UI component category used for library organization and component lookup."
        },
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
