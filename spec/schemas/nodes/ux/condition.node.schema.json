{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Condition",
  "description": "Boolean expression for guard conditions",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.condition"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "condition"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "expression": {
          "type": "string"
        },
        "syntax": {
          "type": "string",
          "description": "Expression language used (e.g., 'jsonata', 'cel', 'js') to enable tooling and validation of the expression field."
        }
      },
      "additionalProperties": false
    }
  }
}
