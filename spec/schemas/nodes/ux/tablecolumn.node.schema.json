{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TableColumn",
  "description": "Configuration for a single column within a data table component, specifying header, data binding, sorting, filtering, and rendering options. Defines table structure and behavior.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.tablecolumn"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "tablecolumn"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "header": {
          "type": "string"
        },
        "field": {
          "type": "string"
        },
        "width": {
          "type": "string"
        },
        "minWidth": {
          "type": "string"
        },
        "maxWidth": {
          "type": "string"
        },
        "filterType": {
          "type": "string",
          "enum": [
            "equals",
            "contains",
            "startsWith",
            "endsWith",
            "range",
            "multiselect",
            "boolean"
          ],
          "description": "Filter operation type available for this column, per HTML 5.3 form input filter patterns."
        },
        "textAlign": {
          "type": "string",
          "enum": ["left", "right", "center", "justify", "start", "end"],
          "description": "CSS text-align value for cell content, per CSS Text specification."
        },
        "displayType": {
          "type": "string",
          "enum": [
            "text",
            "badge",
            "icon",
            "link",
            "image",
            "boolean",
            "date",
            "currency",
            "actions"
          ],
          "description": "Rendering type that controls how cell values are visually presented."
        },
        "defaultSortDirection": {
          "type": "string",
          "enum": ["asc", "desc", "none"],
          "description": "Default sort direction applied to this column when first sorted."
        }
      },
      "required": ["header", "field"],
      "additionalProperties": false
    }
  }
}
