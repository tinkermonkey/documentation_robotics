{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ActionPattern",
  "description": "Reusable action configuration for common user interactions",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.actionpattern"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "actionpattern"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
