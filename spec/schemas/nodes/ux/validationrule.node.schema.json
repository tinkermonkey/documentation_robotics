{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ValidationRule",
  "description": "Client-side validation rule for a field",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.validationrule"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "validationrule"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["required", "minlength", "maxlength", "pattern", "min", "max", "type", "custom"],
          "description": "HTML 5.3 constraint validation API type, per the HTML Living Standard constraint validation specification."
        },
        "message": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
