{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StateAction",
  "description": "Action executed during state lifecycle",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.stateaction"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "stateaction"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "enum": ["navigate", "submit", "open", "close", "dispatch", "validate"],
          "description": "Operation executed during the state lifecycle."
        },
        "description": {
          "type": "string"
        },
        "timing": {
          "type": "string",
          "enum": ["immediate", "deferred", "conditional"],
          "description": "Execution timing of the action relative to the state lifecycle event."
        }
      },
      "required": ["action"],
      "additionalProperties": false
    }
  }
}
