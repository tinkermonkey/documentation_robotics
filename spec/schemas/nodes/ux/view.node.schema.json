{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "View",
  "description": "Routable grouping of components (a complete user experience)",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "ux.view"
    },
    "layer_id": {
      "const": "ux"
    },
    "type": {
      "const": "view"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "page",
            "modal",
            "dialog",
            "drawer",
            "panel",
            "overlay",
            "embedded",
            "full-screen"
          ],
          "description": "View display mode, per HTML 5.3 sectioning and dialog element semantics."
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "routable": {
          "type": "boolean"
        },
        "layout": {
          "type": "string"
        },
        "subViews": {
          "type": "array",
          "description": "Contains relationship"
        },
        "components": {
          "type": "array",
          "description": "Contains relationship"
        },
        "actions": {
          "type": "array",
          "description": "Contains relationship"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
