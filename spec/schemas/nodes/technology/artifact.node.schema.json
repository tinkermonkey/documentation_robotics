{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Artifact",
  "description": "A piece of data that is used or produced in a software development process, or by the deployment and operation of an IT system, such as a source file, executable, script, or configuration file.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.artifact"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "artifact"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "artifactType": {
          "type": "string",
          "enum": ["file", "container-image", "archive", "library", "script", "configuration"],
          "description": "Data artifact category, per ArchiMate 3.2 Artifact element."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["artifactType"],
      "additionalProperties": false
    }
  }
}
