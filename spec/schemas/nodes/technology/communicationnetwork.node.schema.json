{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CommunicationNetwork",
  "description": "A set of structures that connects nodes for the purpose of transmission, routing, and reception of data, such as a LAN, WAN, or VPN.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.communicationnetwork"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "communicationnetwork"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "documentation": {
          "type": "string"
        },
        "networkType": {
          "type": "string",
          "enum": ["lan", "wan", "vpn", "wireless", "internet", "intranet"],
          "description": "Topology and scope classification of the network, per ArchiMate 3.2 CommunicationNetwork element."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["networkType"],
      "additionalProperties": false
    }
  }
}
