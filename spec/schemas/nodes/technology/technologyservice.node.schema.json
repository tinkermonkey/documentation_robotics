{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TechnologyService",
  "description": "Externally visible unit of technology functionality",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.technologyservice"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "technologyservice"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "serviceType": {
          "type": "string",
          "enum": [
            "compute",
            "storage",
            "messaging",
            "database",
            "cache",
            "identity",
            "monitoring"
          ],
          "description": "Infrastructure service category, aligned with cloud provider service classifications (IaaS/PaaS/SaaS) per ArchiMate 3.2 TechnologyService."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["serviceType"],
      "additionalProperties": false
    }
  }
}
