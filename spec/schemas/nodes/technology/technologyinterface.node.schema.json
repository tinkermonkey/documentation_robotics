{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TechnologyInterface",
  "description": "Point of access where technology services are available",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.technologyinterface"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "technologyinterface"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "documentation": {
          "type": "string"
        },
        "protocol": {
          "type": "string",
          "enum": ["http", "https", "grpc", "amqp", "mqtt", "tcp", "udp", "websocket"],
          "description": "Communication protocol exposed at this interface, per ArchiMate 3.2 TechnologyInterface element."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["protocol"],
      "additionalProperties": false
    }
  }
}
