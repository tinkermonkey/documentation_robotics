{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Path",
  "description": "A link between two or more nodes through which those nodes can exchange data, representing a logical communication channel such as a network route, API connection, or message channel.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.path"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "path"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "documentation": {
          "type": "string"
        },
        "pathType": {
          "type": "string",
          "enum": ["point-to-point", "multicast", "broadcast", "bidirectional"],
          "description": "Transmission topology of the path, per ArchiMate 3.2 Path element."
        },
        "protocol": {
          "type": "string",
          "enum": ["http", "https", "grpc", "amqp", "mqtt", "tcp", "udp", "websocket"],
          "description": "Communication protocol carried by this path."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "required": ["pathType"],
      "additionalProperties": false
    }
  }
}
