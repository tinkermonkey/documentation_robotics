{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Device",
  "description": "A physical IT resource upon which system software and artifacts may be stored or deployed for execution, such as a server, workstation, mobile device, or IoT sensor.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "technology.device"
    },
    "layer_id": {
      "const": "technology"
    },
    "type": {
      "const": "device"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "deviceType": {
          "type": "string",
          "enum": ["server", "workstation", "network-device", "storage", "mobile", "embedded"],
          "description": "Physical hardware category of the device, per ArchiMate 3.2 Technology Layer device classification."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["deviceType"],
      "additionalProperties": false
    }
  }
}
