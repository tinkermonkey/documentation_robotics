{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Response",
  "description": "Defines a single HTTP response returned by an operation, including its description, body content (keyed by MIME type), response headers, and optional hypermedia links.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.response"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "response"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "content": {
          "type": "array",
          "description": "Contains relationship"
        },
        "headers": {
          "type": "array",
          "description": "Contains relationship"
        },
        "links": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["description"],
      "additionalProperties": false
    }
  }
}
