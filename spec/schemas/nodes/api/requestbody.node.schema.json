{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RequestBody",
  "description": "Defines the request body for an operation as a map of MIME types to MediaType objects. The 'content' field is required per OpenAPI 3.0. The 'required' field defaults to false.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.requestbody"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "requestbody"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "content": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "additionalProperties": false
    }
  }
}
