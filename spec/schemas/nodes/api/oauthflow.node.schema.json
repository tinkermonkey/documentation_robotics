{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OAuthFlow",
  "description": "Individual OAuth 2.0 flow configuration",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.oauthflow"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "oauthflow"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "authorizationUrl": {
          "type": "string"
        },
        "tokenUrl": {
          "type": "string"
        },
        "refreshUrl": {
          "type": "string"
        },
        "scopes": {
          "type": "object"
        }
      },
      "required": [
        "authorizationUrl",
        "tokenUrl",
        "scopes"
      ],
      "additionalProperties": false
    }
  }
}
