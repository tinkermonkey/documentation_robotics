{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Info",
  "description": "Required root-level metadata describing the API identity, version, legal terms, and maintainer contact. The 'title' and 'version' fields are required per OpenAPI 3.0. Consumed by documentation generators, API gateways, and developer portals.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.info"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "info"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "description": "Supports CommonMark (Markdown) syntax per OpenAPI 3.0."
        },
        "version": {
          "type": "string"
        },
        "termsOfService": {
          "type": "string"
        },
        "contact": {
          "type": "string",
          "description": "Reference to an api.contact node providing maintainer contact details."
        },
        "license": {
          "type": "string",
          "description": "Reference to an api.license node specifying the API's license terms."
        }
      },
      "required": ["title", "version"],
      "additionalProperties": false
    }
  }
}
