{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Operation",
  "description": "Defines a single HTTP method bound to a path, specifying its contract: parameters, request body, possible responses, security requirements, and tags. The primary unit of API surface area in OpenAPI 3.0.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.operation"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "operation"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "operationId": {
          "type": "string",
          "description": "Unique identifier for this operation across the entire API document"
        },
        "summary": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "deprecated": {
          "type": "boolean"
        },
        "parameters": {
          "type": "array",
          "description": "Contains relationship"
        },
        "requestBody": {
          "type": "array",
          "description": "Contains relationship"
        },
        "responses": {
          "type": "array",
          "description": "Contains relationship"
        },
        "callbacks": {
          "type": "array",
          "description": "Contains relationship"
        },
        "security": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["operationId", "summary", "tags"],
      "additionalProperties": false
    }
  }
}
