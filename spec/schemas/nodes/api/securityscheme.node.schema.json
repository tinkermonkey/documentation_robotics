{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecurityScheme",
  "description": "Security mechanism for the API",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.securityscheme"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "securityscheme"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "in": {
          "type": "string"
        },
        "scheme": {
          "type": "string"
        },
        "bearerFormat": {
          "type": "string"
        }
      },
      "required": ["type", "in", "scheme", "bearerFormat"],
      "additionalProperties": false
    }
  }
}
