  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.oauthflows"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "oauthflows"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "implicit": {
          "type": "array",
          "description": "Contains relationship"
        },
        "password": {
          "type": "array",
          "description": "Contains relationship"
        },
        "clientCredentials": {
          "type": "array",
          "description": "Contains relationship"
        },
        "authorizationCode": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "additionalProperties": false
    }
  }
}
