{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/api/link.node.schema.json",
  "title": "Link",
  "description": "Describes a relationship between API responses and subsequent operations, enabling hypermedia-driven API navigation. Supports HATEOAS design patterns.",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "api.link"
    },
    "layer_id": {
      "const": "api"
    },
    "type": {
      "const": "link"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "operationId": {
          "type": "string"
        },
        "operationRef": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "operationId",
        "operationRef"
      ],
      "additionalProperties": false
    }
  }
}
