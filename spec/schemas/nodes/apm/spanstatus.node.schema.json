{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpanStatus",
  "description": "Outcome of span execution",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.spanstatus"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "spanstatus"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "code": {
          "type": "string",
          "enum": ["UNSET", "OK", "ERROR"],
          "description": "OTel span status code"
        },
        "message": {
          "type": "string"
        }
      },
      "required": ["code"],
      "additionalProperties": false
    }
  }
}
