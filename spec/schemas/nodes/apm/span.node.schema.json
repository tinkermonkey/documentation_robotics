{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Span",
  "description": "Unit of work in distributed tracing",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.span"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "span"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "traceId": {
          "type": "string"
        },
        "spanId": {
          "type": "string"
        },
        "traceState": {
          "type": "string"
        },
        "parentSpanId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "spanKind": {
          "type": "string",
          "enum": ["INTERNAL", "SERVER", "CLIENT", "PRODUCER", "CONSUMER"],
          "description": "OTel SpanKind indicating the span's relationship to the calling and receiving system"
        },
        "startTimeUnixNano": {
          "type": "string"
        },
        "endTimeUnixNano": {
          "type": "string"
        },
        "droppedAttributesCount": {
          "type": "string"
        },
        "droppedEventsCount": {
          "type": "string"
        },
        "droppedLinksCount": {
          "type": "string"
        },
        "statusCode": {
          "type": "string",
          "enum": ["UNSET", "OK", "ERROR"],
          "description": "OTel span status code. UNSET = not explicitly set by instrumentation; OK = explicitly successful; ERROR = explicitly failed. Once set to OK, cannot be overridden to ERROR."
        },
        "statusMessage": {
          "type": "string",
          "description": "Optional human-readable error message, used when statusCode is ERROR."
        },
        "attributes": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": [
        "traceId",
        "spanId",
        "traceState",
        "parentSpanId",
        "spanKind",
        "startTimeUnixNano",
        "endTimeUnixNano",
        "droppedAttributesCount",
        "droppedEventsCount",
        "droppedLinksCount"
      ],
      "additionalProperties": false
    }
  }
}
