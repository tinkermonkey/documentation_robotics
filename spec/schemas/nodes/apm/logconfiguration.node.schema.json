{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LogConfiguration",
  "description": "OTel LoggerProvider configuration, covering the LogRecordProcessor pipeline, LogRecordExporter wiring, and minimum severity filtering for log emission.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.logconfiguration"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "logconfiguration"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "serviceName": {
          "type": "string"
        },
        "minimumSeverity": {
          "type": "string",
          "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR", "FATAL"],
          "description": "Minimum OTel SeverityText level for log records to be emitted"
        }
      },
      "required": ["serviceName"],
      "additionalProperties": false
    }
  }
}
