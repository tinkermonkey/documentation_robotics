{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LogProcessor",
  "description": "A processing pipeline component for log records, enabling filtering, transformation, enrichment, or routing of logs before export. Customizes log processing behavior.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.logprocessor"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "logprocessor"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["simple", "batch", "custom"],
          "description": "OTel log record processor type (simple: synchronous, batch: asynchronous buffered)"
        },
        "order": {
          "type": "integer"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
