{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MetricConfiguration",
  "description": "Metrics configuration",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.metricconfiguration"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "metricconfiguration"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "serviceName": {
          "type": "string"
        },
        "exportIntervalMillis": {
          "type": "integer"
        }
      },
      "required": ["serviceName"],
      "additionalProperties": false
    }
  }
}
