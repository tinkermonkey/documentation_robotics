{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DataQualityMetric",
  "description": "Individual data quality metric",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "apm.dataqualitymetric"
    },
    "layer_id": {
      "const": "apm"
    },
    "type": {
      "const": "dataqualitymetric"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "measurement": {
          "type": "string"
        },
        "threshold": {
          "type": "string"
        },
        "alertOnViolation": {
          "type": "boolean"
        }
      },
      "required": ["type", "measurement", "threshold"],
      "additionalProperties": false
    }
  }
}
