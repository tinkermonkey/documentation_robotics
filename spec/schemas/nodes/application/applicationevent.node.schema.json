{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ApplicationEvent",
  "description": "A state change in an application element that triggers reactive application behavior.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "application.applicationevent"
    },
    "layer_id": {
      "const": "application"
    },
    "type": {
      "const": "applicationevent"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "documentation": {
          "type": "string"
        },
        "eventType": {
          "type": "string",
          "enum": ["domain", "integration", "system"],
          "description": "Classification of the application event: domain (business logic), integration (cross-system), or system (infrastructure/runtime)."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "required": ["eventType"],
      "additionalProperties": false
    }
  }
}
