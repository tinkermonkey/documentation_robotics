{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/application/applicationevent.node.schema.json",
  "title": "ApplicationEvent",
  "description": "Application state change notification",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "application.applicationevent"
    },
    "layer_id": {
      "const": "application"
    },
    "type": {
      "const": "applicationevent"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "eventType": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "required": [
        "eventType"
      ],
      "additionalProperties": false
    }
  }
}
