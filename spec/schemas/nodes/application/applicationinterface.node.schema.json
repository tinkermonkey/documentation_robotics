{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ApplicationInterface",
  "description": "Point of access where application service is available",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "application.applicationinterface"
    },
    "layer_id": {
      "const": "application"
    },
    "type": {
      "const": "applicationinterface"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "protocol": {
          "type": "string",
          "enum": ["HTTP", "HTTPS", "gRPC", "AMQP", "WebSocket", "REST", "GraphQL", "SOAP"],
          "description": "Application-level communication protocol used to expose the service. Use application-level protocols only; network/transport-level protocols (TCP, TLS) belong in the Technology Layer."
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties"
        }
      },
      "required": ["protocol"],
      "additionalProperties": false
    }
  }
}
