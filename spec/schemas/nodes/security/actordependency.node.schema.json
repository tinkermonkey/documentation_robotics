{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/tinkermonkey/documentation_robotics/spec/nodes/security/actordependency.node.schema.json",
  "title": "ActorDependency",
  "description": "Dependency between actors",
  "allOf": [
    {
      "$ref": "../../schemas/base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.actordependency"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "actordependency"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "dependee": {
          "type": "string"
        },
        "resource": {
          "type": "string"
        },
        "objective": {
          "type": "string"
        },
        "criticality": {
          "type": "string"
        }
      },
      "required": [
        "dependee",
        "resource",
        "objective",
        "criticality"
      ],
      "additionalProperties": false
    }
  }
}
