{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SocialDependency",
  "description": "Dependencies and trust between actors",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.socialdependency"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "socialdependency"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "depender": {
          "type": "string"
        },
        "dependee": {
          "type": "string"
        },
        "resource": {
          "type": "string"
        },
        "objective": {
          "type": "string"
        },
        "criticality": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Severity of the dependency relationship; higher criticality indicates greater security risk if the dependency fails or is exploited."
        }
      },
      "required": ["depender", "dependee", "resource", "objective", "criticality"],
      "additionalProperties": false
    }
  }
}
