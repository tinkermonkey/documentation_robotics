{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PolicyRule",
  "description": "An atomic policy evaluation unit consisting of a condition predicate and an enforcement effect (PERMIT or DENY), with optional obligation actions executed upon match. Multiple PolicyRules compose a SecurityPolicy evaluated in priority order.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.policyrule"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "policyrule"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "effect": {
          "type": "string",
          "enum": ["permit", "deny", "indeterminate", "not-applicable"],
          "description": "Policy decision outcome, per XACML 3.0 Rule element effect values."
        },
        "message": {
          "type": "string"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["condition", "effect"],
      "additionalProperties": false
    }
  }
}
