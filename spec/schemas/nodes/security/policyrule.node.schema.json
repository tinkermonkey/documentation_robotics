{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PolicyRule",
  "description": "Individual policy rule",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.policyrule"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "policyrule"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "effect": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "actions": {
          "type": "array",
          "description": "Contains relationship"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["condition", "effect"],
      "additionalProperties": false
    }
  }
}
