{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FieldAccessControl",
  "description": "Field-level access control",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.fieldaccesscontrol"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "fieldaccesscontrol"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "field": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [
        "field"
      ],
      "additionalProperties": false
    }
  }
}
