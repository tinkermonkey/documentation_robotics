{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FieldAccessControl",
  "description": "Field-level access control",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.fieldaccesscontrol"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "fieldaccesscontrol"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "field": {
          "type": "string"
        },
        "maskingStrategy": {
          "type": "string",
          "enum": ["redact", "hash", "tokenize", "truncate", "blur", "none"],
          "description": "Technique used to protect sensitive field values when exposed to unauthorized principals, per NIST SP 800-53 SC-28 data-at-rest protection controls."
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["field"],
      "additionalProperties": false
    }
  }
}
