{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InformationRight",
  "description": "Fine-grained information access rights",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.informationright"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "informationright"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "actor": {
          "type": "string"
        },
        "constraint": {
          "type": "string"
        }
      },
      "required": ["actor", "constraint"],
      "additionalProperties": false
    }
  }
}
