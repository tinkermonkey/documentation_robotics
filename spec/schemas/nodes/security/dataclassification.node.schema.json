{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DataClassification",
  "description": "Data classification and protection policies",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.dataclassification"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "dataclassification"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "encryptionRequirement": {
          "type": "string",
          "enum": ["none", "in-transit", "at-rest", "end-to-end", "field-level"],
          "description": "Minimum encryption obligation for data within this classification scheme, per NIST SP 800-53 SC-28 and SC-8 controls."
        },
        "classificationLevel": {
          "type": "string",
          "enum": ["public", "internal", "confidential", "restricted", "top-secret"],
          "description": "Data sensitivity tier applied by this scheme, aligned with NIST FIPS 199 security categorization levels."
        }
      },
      "additionalProperties": false
    }
  }
}
