{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AuditConfig",
  "description": "Configuration for security audit logging, specifying what events to capture, retention periods, storage destinations, and compliance requirements. Enables security monitoring and forensic analysis.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.auditconfig"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "auditconfig"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "level": {
          "type": "string",
          "enum": ["none", "basic", "standard", "detailed", "verbose"],
          "description": "Verbosity of audit event capture, from no logging to full payload-level tracing, per NIST SP 800-53 AU-2 Event Logging."
        },
        "includePayload": {
          "type": "boolean"
        },
        "includeHeaders": {
          "type": "boolean"
        },
        "sanitizeFields": {
          "type": "string"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["level", "sanitizeFields"],
      "additionalProperties": false
    }
  }
}
