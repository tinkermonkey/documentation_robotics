{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecureResource",
  "description": "Protected resource definition",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.secureresource"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "secureresource"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "resource": {
          "type": "string"
        },
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["api", "database", "file", "service", "ui", "stream"],
          "description": "Category of protected resource, used to apply appropriate access control and audit policies per NIST SP 800-53 AC-3."
        },
        "description": {
          "type": "string"
        },
        "operations": {
          "type": "array",
          "description": "Contains relationship"
        },
        "fieldAccess": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["resource", "type"],
      "additionalProperties": false
    }
  }
}
