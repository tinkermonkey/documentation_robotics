{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecurityPolicy",
  "description": "Declarative security policy",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.securitypolicy"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "securitypolicy"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "priority": {
          "type": "integer"
        },
        "target": {
          "type": "string"
        },
        "rules": {
          "type": "array",
          "description": "Contains relationship"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": [
        "priority",
        "target"
      ],
      "additionalProperties": false
    }
  }
}
