{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AccessCondition",
  "description": "Conditional access rule",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.accesscondition"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "accesscondition"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "field": {
          "type": "string"
        },
        "operator": {
          "type": "string",
          "enum": ["eq", "neq", "gt", "lt", "in", "contains", "matches", "exists"],
          "description": "Comparison operator applied to the field value, per XACML 3.0 match function semantics."
        },
        "value": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "source": {
          "type": "string"
        }
      },
      "required": ["field", "operator", "value", "message", "source"],
      "additionalProperties": false
    }
  }
}
