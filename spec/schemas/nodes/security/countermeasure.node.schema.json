{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Countermeasure",
  "description": "Security countermeasure for a threat",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.countermeasure"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "countermeasure"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "effectiveness": {
          "type": "string",
          "enum": ["high", "medium", "low", "unknown"],
          "description": "Assessed effectiveness of the countermeasure in reducing threat risk, per NIST SP 800-30 risk treatment evaluation."
        },
        "implemented": {
          "type": "boolean"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    }
  }
}
