{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecurityModel",
  "description": "The root aggregate for an application's security posture, composing authentication, authorization (roles, permissions, resources), threat model, data classification, accountability requirements, and policies into a unified security specification. Scoped to a single application or bounded context.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.securitymodel"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "securitymodel"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "application": {
          "type": "string",
          "description": "Name or identifier of the application this security model governs. Used to scope the security posture to a single application or bounded context."
        },
        "accessControlModel": {
          "type": "string",
          "enum": ["dac", "mac", "rbac", "abac", "rebac"],
          "description": "Access control paradigm in use: DAC (discretionary), MAC (mandatory), RBAC (role-based), ABAC (attribute-based), ReBAC (relationship-based). Per NIST SP 800-162 and SP 800-207."
        },
        "authentication": {
          "type": "array",
          "description": "Contains relationship"
        },
        "actors": {
          "type": "array",
          "description": "Contains relationship"
        },
        "roles": {
          "type": "array",
          "description": "Contains relationship"
        },
        "permissions": {
          "type": "array",
          "description": "Contains relationship"
        },
        "resources": {
          "type": "array",
          "description": "Contains relationship"
        },
        "informationEntities": {
          "type": "array",
          "description": "Contains relationship"
        },
        "delegations": {
          "type": "array",
          "description": "Contains relationship"
        },
        "securityConstraints": {
          "type": "array",
          "description": "Contains relationship"
        },
        "policies": {
          "type": "array",
          "description": "Contains relationship"
        },
        "dataClassification": {
          "type": "array",
          "description": "Contains relationship"
        },
        "socialDependencies": {
          "type": "array",
          "description": "Contains relationship"
        },
        "accountability": {
          "type": "array",
          "description": "Contains relationship"
        },
        "threats": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["version", "application"],
      "additionalProperties": false
    }
  }
}
