{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SecurityModel",
  "description": "Complete security model for application",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.securitymodel"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "securitymodel"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "application": {
          "type": "string"
        },
        "authentication": {
          "type": "array",
          "description": "Contains relationship"
        },
        "actors": {
          "type": "array",
          "description": "Contains relationship"
        },
        "roles": {
          "type": "array",
          "description": "Contains relationship"
        },
        "permissions": {
          "type": "array",
          "description": "Contains relationship"
        },
        "resources": {
          "type": "array",
          "description": "Contains relationship"
        },
        "informationEntities": {
          "type": "array",
          "description": "Contains relationship"
        },
        "delegations": {
          "type": "array",
          "description": "Contains relationship"
        },
        "securityConstraints": {
          "type": "array",
          "description": "Contains relationship"
        },
        "policies": {
          "type": "array",
          "description": "Contains relationship"
        },
        "dataClassification": {
          "type": "array",
          "description": "Contains relationship"
        },
        "socialDependencies": {
          "type": "array",
          "description": "Contains relationship"
        },
        "accountability": {
          "type": "array",
          "description": "Contains relationship"
        },
        "threats": {
          "type": "array",
          "description": "Contains relationship"
        }
      },
      "required": ["version", "application"],
      "additionalProperties": false
    }
  }
}
