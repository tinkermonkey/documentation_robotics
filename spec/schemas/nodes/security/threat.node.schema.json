{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Threat",
  "description": "Security threat and countermeasures",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.threat"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "threat"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "threatens": {
          "type": "string"
        },
        "likelihood": {
          "type": "string"
        },
        "impact": {
          "type": "string"
        },
        "countermeasures": {
          "type": "array",
          "description": "Contains relationship"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["threatens", "likelihood", "impact"],
      "additionalProperties": false
    }
  }
}
