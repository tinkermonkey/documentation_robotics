{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Threat",
  "description": "Security threat and countermeasures",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "security.threat"
    },
    "layer_id": {
      "const": "security"
    },
    "type": {
      "const": "threat"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "threatens": {
          "type": "string"
        },
        "likelihood": {
          "type": "string",
          "enum": ["low", "moderate", "high"],
          "description": "Probability the threat will be exploited, per NIST SP 800-30 Table E-2."
        },
        "impact": {
          "type": "string",
          "enum": ["low", "moderate", "high"],
          "description": "Potential adverse impact if the threat is realized, per NIST FIPS 199."
        },
        "criticality": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Combined severity rating reflecting both likelihood and impact for prioritization."
        },
        "countermeasures": {
          "type": "array",
          "description": "Contains relationship"
        },
        "source": {
          "type": "object",
          "description": "Source code reference"
        }
      },
      "required": ["threatens", "likelihood", "impact"],
      "additionalProperties": false
    }
  }
}
