{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sequence",
  "description": "A database sequence generator that produces unique, ordered numeric values. Used for generating primary keys, order numbers, or other sequential identifiers.",
  "allOf": [
    {
      "$ref": "../../base/spec-node.schema.json"
    }
  ],
  "properties": {
    "spec_node_id": {
      "const": "data-store.sequence"
    },
    "layer_id": {
      "const": "data-store"
    },
    "type": {
      "const": "sequence"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "schema": {
          "type": "string"
        },
        "dataType": {
          "type": "string",
          "enum": ["SMALLINT", "INTEGER", "BIGINT"],
          "description": "Integer data type for the sequence generator values, per SQL 2016 Part 2 Clause 11.62. Determines the min/max value range of the sequence."
        },
        "startValue": {
          "type": "integer"
        },
        "increment": {
          "type": "integer"
        },
        "minValue": {
          "type": "integer"
        },
        "maxValue": {
          "type": "integer"
        },
        "cycle": {
          "type": "boolean"
        },
        "cache": {
          "type": "integer"
        },
        "ownedBy": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
