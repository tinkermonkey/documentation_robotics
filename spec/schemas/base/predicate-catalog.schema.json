{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "predicate-catalog.schema.json",
  "title": "PredicateCatalog",
  "description": "Master catalog of all semantic predicates used in the model. Consolidates predicate definitions with their semantics, inverse relationships, and standard alignments. Single source of truth for valid predicates.",
  "type": "object",
  "required": ["predicates"],
  "additionalProperties": false,
  "properties": {
    "predicates": {
      "type": "object",
      "description": "Mapping of predicate names to their definitions",
      "additionalProperties": {
        "$ref": "#/definitions/PredicateDefinition"
      },
      "minProperties": 1,
      "examples": [
        {
          "supports": {
            "predicate": "supports",
            "inverse": "supported-by",
            "category": "motivation",
            "semantics": {
              "directionality": "bidirectional",
              "transitivity": true,
              "symmetry": false,
              "reflexivity": false
            },
            "archimate_alignment": "Influence",
            "description": "Element contributes to achieving or enabling another element"
          }
        }
      ]
    }
  },
  "definitions": {
    "PredicateDefinition": {
      "type": "object",
      "title": "PredicateDefinition",
      "description": "Complete definition of a semantic predicate including its semantics and relationships",
      "required": ["predicate", "inverse", "category", "description"],
      "additionalProperties": false,
      "properties": {
        "predicate": {
          "type": "string",
          "description": "Forward direction predicate name (e.g., 'supports')"
        },
        "inverse": {
          "type": "string",
          "description": "Inverse/reverse predicate name (e.g., 'supported-by')"
        },
        "category": {
          "type": "string",
          "enum": [
            "motivation",
            "business",
            "security",
            "application",
            "technology",
            "api",
            "data",
            "data-store",
            "ux",
            "navigation",
            "apm",
            "testing",
            "structural",
            "behavioral",
            "dependency",
            "traceability",
            "governance"
          ],
          "description": "Category of relationship based on layer or domain"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of what this predicate means"
        },
        "archimate_alignment": {
          "type": "string",
          "enum": [
            "Composition",
            "Aggregation",
            "Assignment",
            "Realization",
            "Serving",
            "Access",
            "Influence",
            "Triggering",
            "Flow",
            "Specialization",
            "Association"
          ],
          "description": "Corresponding ArchiMate 3.2 relationship type (if applicable)"
        },
        "semantics": {
          "type": "object",
          "description": "Semantic properties describing the nature of this relationship",
          "required": ["directionality", "transitivity", "symmetry", "reflexivity"],
          "additionalProperties": false,
          "properties": {
            "directionality": {
              "type": "string",
              "enum": ["unidirectional", "bidirectional"],
              "description": "Whether the relationship is unidirectional (one-way) or bidirectional (navigable both ways)"
            },
            "transitivity": {
              "type": "boolean",
              "description": "Whether the relationship is transitive: if A→B and B→C, then A→C"
            },
            "symmetry": {
              "type": "boolean",
              "description": "Whether the relationship is symmetric: if A→B, then B→A"
            },
            "reflexivity": {
              "type": "boolean",
              "description": "Whether an element can have this relationship with itself"
            }
          }
        },
        "default_strength": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Default strength/importance level for relationships using this predicate"
        }
      }
    }
  }
}
