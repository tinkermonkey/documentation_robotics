{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/01-motivation-layer.json",
  "title": "Motivation Layer Schema",
  "type": "object",
  "description": "ArchiMate Motivation Layer elements for business services, processes, actors, and objects",
  "properties": {
    "stakeholders": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Stakeholder"
      }
    },
    "drivers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Driver"
      }
    },
    "assessments": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Assessment"
      }
    },
    "goals": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Goal"
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Outcome"
      }
    },
    "principles": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Principle"
      }
    },
    "requirements": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Requirement"
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Constraint"
      }
    },
    "meanings": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Meaning"
      }
    },
    "values": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Value"
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Relationship"
      }
    }
  },
  "definitions": {
    "Stakeholder": {
      "type": "object",
      "description": "Individual, team, or organization with interest in the outcome",
      "required": [
        "id",
        "name",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "internal",
            "external",
            "customer",
            "partner",
            "regulator"
          ]
        }
      }
    },
    "Driver": {
      "type": "object",
      "description": "External or internal condition that motivates an organization",
      "required": [
        "id",
        "name",
        "category"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "market",
            "regulatory",
            "technology",
            "competitive",
            "operational",
            "strategic"
          ]
        }
      }
    },
    "Assessment": {
      "type": "object",
      "description": "Outcome of analysis of the state of affairs",
      "required": [
        "id",
        "name",
        "assessmentType"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        },
        "assessmentType": {
          "type": "string",
          "enum": [
            "strength",
            "weakness",
            "opportunity",
            "threat",
            "risk",
            "gap"
          ]
        }
      }
    },
    "Goal": {
      "type": "object",
      "description": "High-level statement of intent, direction, or desired end state",
      "required": [
        "id",
        "name",
        "priority"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        },
        "priority": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "goal.measurable": {
              "type": "string"
            },
            "goal.target-date": {
              "type": "string"
            },
            "goal.kpi": {
              "type": "string"
            }
          }
        }
      }
    },
    "Outcome": {
      "type": "object",
      "description": "End result that has been achieved",
      "required": [
        "id",
        "name",
        "status"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "planned",
            "in-progress",
            "achieved",
            "not-achieved"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "outcome.achieved-date": {
              "type": "string"
            },
            "outcome.metrics": {
              "type": "string"
            }
          }
        }
      }
    },
    "Principle": {
      "type": "object",
      "description": "Normative property of all systems in a given context",
      "required": [
        "id",
        "name",
        "category"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "business",
            "data",
            "application",
            "technology",
            "security",
            "integration"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "principle.rationale": {
              "type": "string"
            },
            "principle.implications": {
              "type": "string"
            }
          }
        }
      }
    },
    "Requirement": {
      "type": "object",
      "description": "Statement of need that must be realized",
      "required": [
        "id",
        "name",
        "requirementType",
        "priority"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        },
        "requirementType": {
          "type": "string",
          "enum": [
            "functional",
            "non-functional",
            "business",
            "technical",
            "compliance",
            "user"
          ]
        },
        "priority": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "requirement.source": {
              "type": "string"
            },
            "requirement.status": {
              "type": "string"
            },
            "requirement.traceability-id": {
              "type": "string"
            },
            "requirement.security.mitigates": {
              "type": "string"
            },
            "requirement.security.implementation-type": {
              "type": "string"
            },
            "requirement.security.implementation-params": {
              "type": "string"
            }
          }
        }
      }
    },
    "Constraint": {
      "type": "object",
      "description": "Restriction on the way in which a system is realized",
      "required": [
        "id",
        "name",
        "constraintType"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        },
        "constraintType": {
          "type": "string",
          "enum": [
            "budget",
            "time",
            "technology",
            "regulatory",
            "organizational",
            "resource"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "constraint.source": {
              "type": "string"
            },
            "constraint.negotiable": {
              "type": "string"
            },
            "constraint.commitment-type": {
              "type": "string"
            },
            "constraint.compliance-requirements": {
              "type": "string"
            },
            "constraint.penalties": {
              "type": "string"
            }
          }
        }
      }
    },
    "Meaning": {
      "type": "object",
      "description": "Knowledge or expertise present in a representation",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        }
      }
    },
    "Value": {
      "type": "object",
      "description": "Relative worth, utility, or importance of something",
      "required": [
        "id",
        "name",
        "valueType"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string"
        },
        "valueType": {
          "type": "string",
          "enum": [
            "financial",
            "customer",
            "operational",
            "strategic",
            "social"
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "value.quantifiable": {
              "type": "string"
            },
            "value.measurement": {
              "type": "string"
            }
          }
        }
      }
    },
    "Relationship": {
      "type": "object",
      "required": [
        "type",
        "source",
        "target"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Composition",
            "Aggregation",
            "Assignment",
            "Realization",
            "Triggering",
            "Flow",
            "Association",
            "Access",
            "Serving"
          ]
        },
        "source": {
          "type": "string",
          "format": "uuid"
        },
        "target": {
          "type": "string",
          "format": "uuid"
        },
        "documentation": {
          "type": "string"
        }
      }
    }
  }
}
