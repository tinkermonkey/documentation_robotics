{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/08-datastore-layer.json",
  "title": "Datastore Layer Schema",
  "type": "object",
  "description": "ArchiMate Datastore Layer elements for business services, processes, actors, and objects",
  "properties": {
    "databases": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Database"
      }
    },
    "databaseSchemas": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/DatabaseSchema"
      }
    },
    "tables": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Table"
      }
    },
    "columns": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Column"
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Constraint"
      }
    },
    "indexes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Index"
      }
    },
    "views": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/View"
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Relationship"
      }
    }
  },
  "definitions": {
    "Database": {
      "type": "object",
      "description": "Database instance containing schemas",
      "required": [
        "id",
        "name",
        "type",
        "version"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "PostgreSQL",
            "MySQL",
            "SQLite",
            "MariaDB",
            "Oracle",
            "SQL Server"
          ]
        },
        "version": {
          "type": "string"
        },
        "charset": {
          "type": "string"
        },
        "collation": {
          "type": "string"
        },
        "schemas": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 1,
          "description": "References to DatabaseSchema IDs"
        }
      }
    },
    "DatabaseSchema": {
      "type": "object",
      "description": "Logical grouping of database objects",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "owner": {
          "type": "string"
        },
        "tables": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 0,
          "description": "References to Table IDs"
        },
        "views": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 0,
          "description": "References to View IDs"
        },
        "functions": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 0,
          "description": "References to Function IDs"
        },
        "sequences": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 0,
          "description": "References to Sequence IDs"
        }
      }
    },
    "Table": {
      "type": "object",
      "description": "Database table definition",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "schema": {
          "type": "string"
        },
        "tablespace": {
          "type": "string"
        },
        "columns": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 1,
          "description": "References to Column IDs"
        },
        "constraints": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 0,
          "description": "References to Constraint IDs"
        },
        "indexes": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 0,
          "description": "References to Index IDs"
        },
        "triggers": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "minItems": 0,
          "description": "References to Trigger IDs"
        }
      }
    },
    "Column": {
      "type": "object",
      "description": "Table column definition",
      "required": [
        "id",
        "name",
        "dataType"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "dataType": {
          "type": "string"
        },
        "nullable": {
          "type": "boolean"
        },
        "defaultValue": {
          "type": "string"
        },
        "generated": {
          "type": "string"
        }
      }
    },
    "Constraint": {
      "type": "object",
      "description": "Table constraint",
      "required": [
        "id",
        "name",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "PRIMARY_KEY",
            "UNIQUE",
            "FOREIGN_KEY",
            "CHECK",
            "EXCLUSION"
          ]
        }
      }
    },
    "Index": {
      "type": "object",
      "description": "Database index for query optimization",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "columns": {
          "type": "string"
        },
        "unique": {
          "type": "boolean"
        },
        "method": {
          "type": "string"
        },
        "where": {
          "type": "string"
        },
        "include": {
          "type": "string"
        }
      }
    },
    "View": {
      "type": "object",
      "description": "Database view",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "definition": {
          "type": "string"
        },
        "materialized": {
          "type": "boolean"
        }
      }
    },
    "Relationship": {
      "type": "object",
      "required": [
        "type",
        "source",
        "target"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Composition",
            "Aggregation",
            "Assignment",
            "Realization",
            "Triggering",
            "Flow",
            "Association",
            "Access",
            "Serving"
          ]
        },
        "source": {
          "type": "string",
          "format": "uuid"
        },
        "target": {
          "type": "string",
          "format": "uuid"
        },
        "documentation": {
          "type": "string"
        }
      }
    }
  }
}
