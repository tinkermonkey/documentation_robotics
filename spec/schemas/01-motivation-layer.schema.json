{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/01-motivation-layer.schema.json",
  "title": "Motivation Layer Schema",
  "description": "Captures stakeholder concerns, goals, requirements, and constraints that drive architectural decisions using ArchiMate motivation elements.",
  "type": "object",
  "properties": {
    "stakeholders": {
      "type": "array",
      "description": "Collection of Stakeholder entities",
      "items": {
        "$ref": "#/definitions/Stakeholder"
      }
    },
    "drivers": {
      "type": "array",
      "description": "Collection of Driver entities",
      "items": {
        "$ref": "#/definitions/Driver"
      }
    },
    "assessments": {
      "type": "array",
      "description": "Collection of Assessment entities",
      "items": {
        "$ref": "#/definitions/Assessment"
      }
    },
    "goals": {
      "type": "array",
      "description": "Collection of Goal entities",
      "items": {
        "$ref": "#/definitions/Goal"
      }
    },
    "outcomes": {
      "type": "array",
      "description": "Collection of Outcome entities",
      "items": {
        "$ref": "#/definitions/Outcome"
      }
    },
    "principles": {
      "type": "array",
      "description": "Collection of Principle entities",
      "items": {
        "$ref": "#/definitions/Principle"
      }
    },
    "requirements": {
      "type": "array",
      "description": "Collection of Requirement entities",
      "items": {
        "$ref": "#/definitions/Requirement"
      }
    },
    "constraints": {
      "type": "array",
      "description": "Collection of Constraint entities",
      "items": {
        "$ref": "#/definitions/Constraint"
      }
    },
    "meanings": {
      "type": "array",
      "description": "Collection of Meaning entities",
      "items": {
        "$ref": "#/definitions/Meaning"
      }
    },
    "values": {
      "type": "array",
      "description": "Collection of Value entities",
      "items": {
        "$ref": "#/definitions/Value"
      }
    }
  },
  "definitions": {
    "Stakeholder": {
      "type": "object",
      "description": "Individual, team, or organization with interest in the outcome",
      "required": [
        "id",
        "name",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "$ref": "#/definitions/enum"
        }
      },
      "definitions": {
        "StakeholderType": {
          "type": "string",
          "enum": [
            "internal",
            "external",
            "customer",
            "partner",
            "regulator"
          ]
        }
      }
    },
    "Driver": {
      "type": "object",
      "description": "External or internal condition that motivates an organization",
      "required": [
        "id",
        "name",
        "category"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "$ref": "#/definitions/enum"
        }
      },
      "definitions": {
        "DriverCategory": {
          "type": "string",
          "enum": [
            "market",
            "regulatory",
            "technology",
            "competitive",
            "operational",
            "strategic"
          ]
        }
      }
    },
    "Assessment": {
      "type": "object",
      "description": "Outcome of analysis of the state of affairs",
      "required": [
        "id",
        "name",
        "assessmentType"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        },
        "assessmentType": {
          "$ref": "#/definitions/enum"
        }
      },
      "definitions": {
        "AssessmentType": {
          "type": "string",
          "enum": [
            "strength",
            "weakness",
            "opportunity",
            "threat",
            "risk",
            "gap"
          ]
        }
      }
    },
    "Goal": {
      "type": "object",
      "description": "High-level statement of intent, direction, or desired end state",
      "required": [
        "id",
        "name",
        "priority"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        },
        "priority": {
          "$ref": "#/definitions/enum"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties",
          "properties": {
            "goal": {
              "type": "object",
              "properties": {
                "measurable": {
                  "type": "string",
                  "description": "optional"
                },
                "target-date": {
                  "type": "string",
                  "description": "optional"
                },
                "kpi": {
                  "type": "string",
                  "description": "optional"
                }
              }
            }
          }
        }
      },
      "definitions": {
        "Priority": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        }
      }
    },
    "Outcome": {
      "type": "object",
      "description": "End result that has been achieved",
      "required": [
        "id",
        "name",
        "status"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        },
        "status": {
          "$ref": "#/definitions/enum"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties",
          "properties": {
            "outcome": {
              "type": "object",
              "properties": {
                "achieved-date": {
                  "type": "string",
                  "description": "optional"
                },
                "metrics": {
                  "type": "string",
                  "description": "optional"
                }
              }
            }
          }
        }
      },
      "definitions": {
        "OutcomeStatus": {
          "type": "string",
          "enum": [
            "planned",
            "in-progress",
            "achieved",
            "not-achieved"
          ]
        }
      }
    },
    "Principle": {
      "type": "object",
      "description": "Normative property of all systems in a given context",
      "required": [
        "id",
        "name",
        "category"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "$ref": "#/definitions/enum"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties",
          "properties": {
            "principle": {
              "type": "object",
              "properties": {
                "rationale": {
                  "type": "string",
                  "description": "optional"
                },
                "implications": {
                  "type": "string",
                  "description": "optional"
                }
              }
            }
          }
        }
      },
      "definitions": {
        "PrincipleCategory": {
          "type": "string",
          "enum": [
            "business",
            "data",
            "application",
            "technology",
            "security",
            "integration"
          ]
        }
      }
    },
    "Requirement": {
      "type": "object",
      "description": "Statement of need that must be realized",
      "required": [
        "id",
        "name",
        "requirementType",
        "priority"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        },
        "requirementType": {
          "$ref": "#/definitions/enum"
        },
        "priority": {
          "$ref": "#/definitions/enum"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties",
          "properties": {
            "requirement": {
              "type": "object",
              "properties": {
                "source": {
                  "type": "string",
                  "description": "optional"
                },
                "status": {
                  "type": "string",
                  "description": "optional"
                },
                "traceability-id": {
                  "type": "string",
                  "description": "optional"
                },
                "security.mitigates": {
                  "type": "string",
                  "description": "optional"
                },
                "security.implementation-type": {
                  "type": "string",
                  "description": "optional"
                },
                "security.implementation-params": {
                  "type": "string",
                  "description": "optional"
                }
              }
            }
          }
        }
      },
      "definitions": {
        "RequirementType": {
          "type": "string",
          "enum": [
            "functional",
            "non-functional",
            "business",
            "technical",
            "compliance",
            "user"
          ]
        },
        "Priority": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "medium",
            "low"
          ]
        }
      }
    },
    "Constraint": {
      "type": "object",
      "description": "Restriction on the way in which a system is realized",
      "required": [
        "id",
        "name",
        "constraintType"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        },
        "constraintType": {
          "$ref": "#/definitions/enum"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties",
          "properties": {
            "constraint": {
              "type": "object",
              "properties": {
                "source": {
                  "type": "string",
                  "description": "optional"
                },
                "negotiable": {
                  "type": "string",
                  "description": "optional"
                },
                "commitment-type": {
                  "type": "string",
                  "description": "optional"
                },
                "compliance-requirements": {
                  "type": "string",
                  "description": "optional"
                },
                "penalties": {
                  "type": "string",
                  "description": "optional"
                }
              }
            }
          }
        }
      },
      "definitions": {
        "ConstraintType": {
          "type": "string",
          "enum": [
            "budget",
            "time",
            "technology",
            "regulatory",
            "organizational",
            "resource"
          ]
        }
      }
    },
    "Meaning": {
      "type": "object",
      "description": "Knowledge or expertise present in a representation",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "Value": {
      "type": "object",
      "description": "Relative worth, utility, or importance of something",
      "required": [
        "id",
        "name",
        "valueType"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "documentation": {
          "type": "string",
          "minLength": 1
        },
        "valueType": {
          "$ref": "#/definitions/enum"
        },
        "properties": {
          "type": "object",
          "description": "Cross-layer properties",
          "properties": {
            "value": {
              "type": "object",
              "properties": {
                "quantifiable": {
                  "type": "string",
                  "description": "optional"
                },
                "measurement": {
                  "type": "string",
                  "description": "optional"
                }
              }
            }
          }
        }
      },
      "definitions": {
        "ValueType": {
          "type": "string",
          "enum": [
            "financial",
            "customer",
            "operational",
            "strategic",
            "social"
          ]
        }
      }
    }
  }
}
