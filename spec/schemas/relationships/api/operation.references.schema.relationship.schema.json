{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Operation References Schema",
  "description": "Defines relationship: api.operation references api.schema",
  "allOf": [
    {
      "$ref": "../../base/spec-node-relationship.schema.json"
    }
  ],
  "properties": {
    "id": {
      "const": "api.references.api"
    },
    "source_spec_node_id": {
      "const": "api.operation"
    },
    "source_layer": {
      "const": "api"
    },
    "destination_spec_node_id": {
      "const": "api.schema"
    },
    "destination_layer": {
      "const": "api"
    },
    "predicate": {
      "const": "references"
    },
    "cardinality": {
      "const": "many-to-many"
    },
    "strength": {
      "const": "medium"
    }
  }
}
