{
  "name": "@documentation-robotics/cli-validation-suite",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "test": "node --import tsx runner.ts",
    "test:compatibility": "node --import tsx runner.ts",
    "test:compatibility:fast": "node --import tsx runner.ts --priority=high --fast-fail --verbose",
    "test:compatibility:ci": "node --import tsx runner.ts --reporter=junit --output=test-results/junit.xml",
    "test:compatibility:verbose": "node --import tsx runner.ts --verbose",
    "test:compatibility:high": "node --import tsx runner.ts --priority=high",
    "test:compatibility:medium": "node --import tsx runner.ts --priority=medium",
    "test:compatibility:low": "node --import tsx runner.ts --priority=low",
    "test:unit": "node --import tsx --test tests/*.test.ts",
    "test:all": "node --import tsx --test tests/*.test.ts && npm run test:compatibility"
  },
  "dependencies": {
    "glob": "^10.4.5",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2"
  }
}
