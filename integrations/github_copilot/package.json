{
  "name": "documentation-robotics-copilot",
  "displayName": "Documentation Robotics for Copilot",
  "description": "Architecture modeling and validation assistant for GitHub Copilot",
  "version": "0.1.0",
  "publisher": "tinkermonkey",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "documentation-robotics.dr",
        "name": "dr",
        "fullName": "Documentation Robotics",
        "description": "Architecture modeling and validation assistant",
        "isSticky": true,
        "commands": [
          {
            "name": "init",
            "description": "Initialize a new architecture model"
          },
          {
            "name": "model",
            "description": "Interactive architecture modeling"
          },
          {
            "name": "validate",
            "description": "Validate model and suggest fixes"
          },
          {
            "name": "ingest",
            "description": "Extract model from codebase"
          },
          {
            "name": "project",
            "description": "Project elements across layers"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Documentation Robotics",
      "properties": {
        "documentation-robotics.drPath": {
          "type": "string",
          "default": "",
          "description": "Path to the 'dr' executable. If empty, the extension will try to find it in .venv/bin/dr or venv/bin/dr, or use the system PATH."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
